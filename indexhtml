        // „Éâ„É©„ÉÉ„Ç∞&„Éâ„É≠„ÉÉ„ÉóÂØæÂøú
        const uploadSection = document.querySelector('.upload-section');
        
        uploadSection.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.borderColor = '#4f46e5';
            this.style.background = '#f1f5f9';
        });

        uploadSection.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.style.borderColor = '#e2e8f0';
            this.style.background = '#f8fafc';
        });

        uploadSection.addEventListener('drop', function(e) {
            e.preventDefault();
            this.style.borderColor = '#e2e8f0';
            this.style.background = '#f8fafc';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                // Èü≥Â£∞„Éï„Ç°„Ç§„É´„Åã„Å©„ÅÜ„Åã„ÉÅ„Çß„ÉÉ„ÇØ
                if (file.type.startsWith('audio/') || file.name.match(/\.(m4a|mp3|wav|flac)$/i)) {
                    document.getElementById('audioFile').files = files;
                    document.getElementById('fileName').textContent = `ÈÅ∏Êäû„Åï„Çå„Åü„Éï„Ç°„Ç§„É´: ${file.name}`;
                    const nameWithoutExt = file.name.replace(/\.[^/.]+$/, "");
                    document.getElementById('currentFileName').value = `Èü≥Â£∞Â§âÊèõ_${nameWithoutExt}`;
                } else {
                    showError('Èü≥Â£∞„Éï„Ç°„Ç§„É´„ÇíÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑÔºà.m4a, .mp3, .wav, .flacÔºâ');
                }
            }
        });

        // Èü≥Â£∞„Éï„Ç°„Ç§„É´ÂΩ¢Âºè„ÅÆËá™ÂãïÊ§úÂá∫„Å®Ë®≠ÂÆöË™øÊï¥
        document.getElementById('audioFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // „Éï„Ç°„Ç§„É´ÂΩ¢Âºè„Å´Âøú„Åò„Å¶Speech API„ÅÆË®≠ÂÆö„ÇíË™øÊï¥
                updateAudioConfig(file);
            }
        });

        function updateAudioConfig(file) {
            // „Éï„Ç°„Ç§„É´Êã°ÂºµÂ≠ê„Å´Âü∫„Å•„ÅÑ„Å¶„Ç®„É≥„Ç≥„Éº„Éá„Ç£„É≥„Ç∞Ë®≠ÂÆö„ÇíÊ±∫ÂÆö
            // ÂÆüÈöõ„ÅÆÂÆüË£Ö„Åß„ÅØ„ÄÅ„Åì„ÅÆÊÉÖÂ†±„Çí convertAudio Èñ¢Êï∞„Åß‰ΩøÁî®
            const extension = file.name.split('.').pop().toLowerCase();
            let encoding = 'WEBM_OPUS'; // „Éá„Éï„Ç©„É´„Éà
            
            switch(extension) {
                case 'mp3':
                    encoding = 'MP3';
                    break;
                case 'wav':
                    encoding = 'LINEAR16';
                    break;
                case 'flac':
                    encoding = 'FLAC';
                    break;
                case 'm4a':
                    encoding = 'MP3'; // M4A„ÅØÈÄöÂ∏∏AAC„Å†„Åå„ÄÅAPI„Åß„ÅØMP3„Å®„Åó„Å¶Êâ±„ÅÜ
                    break;
            }
            
            // „Åì„ÅÆÊÉÖÂ†±„ÇíÂæå„Åß‰ΩøÁî®„Åô„Çã„Åü„ÇÅ„Å´‰øùÂ≠ò
            window.currentAudioEncoding = encoding;
        }

        // „Ç≠„Éº„Éú„Éº„Éâ„Ç∑„Éß„Éº„Éà„Ç´„ÉÉ„Éà
        document.addEventListener('keydown', function(e) {
            // Ctrl+S „ÅßÂ±•Ê≠¥‰øùÂ≠ò
            if (e.ctrlKey && e.key === 's') {
                e.preventDefault();
                saveToHistory();
            }
            
            // Ctrl+D „Åß„ÉÜ„Ç≠„Çπ„Éà„ÉÄ„Ç¶„É≥„É≠„Éº„Éâ
            if (e.ctrlKey && e.key === 'd') {
                e.preventDefault();
                downloadAsText();
            }
        });

        // ÊñáÂ≠óÊï∞„Ç´„Ç¶„É≥„ÉàË°®Á§∫
        function updateCharacterCount() {
            const text = document.getElementById('textDisplay').textContent || '';
            const charCount = text.length;
            const wordCount = text.trim() ? text.trim().split(/\s+/).length : 0;
            
            // ÊñáÂ≠óÊï∞Ë°®Á§∫Ë¶ÅÁ¥†„Åå„ÅÇ„Çå„Å∞Êõ¥Êñ∞ÔºàÂøÖË¶Å„Å´Âøú„Åò„Å¶ËøΩÂä†Ôºâ
            const countDisplay = document.getElementById('characterCount');
            if (countDisplay) {
                countDisplay.textContent = `ÊñáÂ≠óÊï∞: ${charCount} / ÂçòË™ûÊï∞: ${wordCount}`;
            }
        }

        // „ÉÜ„Ç≠„Çπ„ÉàÂ§âÊõ¥ÊôÇ„Å´ÊñáÂ≠óÊï∞„ÇíÊõ¥Êñ∞
        document.getElementById('textDisplay').addEventListener('input', updateCharacterCount);

        // ÂàùÊúüË°®Á§∫ÊôÇ„ÅÆ„Éó„É¨„Éº„Çπ„Éõ„É´„ÉÄ„ÉºË®≠ÂÆö
        document.getElementById('currentFileName').value = 'Èü≥Â£∞Â§âÊèõ_' + new Date().toISOString().slice(0, 10);
    </script>
