    <script>
        let currentText = '';
        let currentSpeakerData = null;
        let historyData = [];
        let displayMode = 'normal'; // 'normal' or 'speaker'
        let speakerColors = ['#4f46e5', '#059669', '#dc2626', '#d97706', '#7c2d12', '#1e40af'];
        let speakerNames = {};

        // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´Â±•Ê≠¥„ÇíÂæ©ÂÖÉ
        window.onload = function() {
            loadHistoryFromStorage();
            displayHistory();
            generateSpeakerNameInputs();
        };

        // Ë©±ËÄÖË≠òÂà•Ë®≠ÂÆö„ÅÆË°®Á§∫/ÈùûË°®Á§∫
        function toggleDiarizationSettings() {
            const enableDiarization = document.getElementById('enableDiarization').value === 'true';
            const diarizationSettings = document.getElementById('diarizationSettings');
            const speakerNames = document.getElementById('speakerNames');
            
            if (enableDiarization) {
                diarizationSettings.style.display = 'block';
                speakerNames.style.display = 'block';
                generateSpeakerNameInputs();
            } else {
                diarizationSettings.style.display = 'none';
                speakerNames.style.display = 'none';
            }
        }

        // Ë©±ËÄÖÂêçÂÖ•Âäõ„Éï„Ç£„Éº„É´„Éâ„ÇíÁîüÊàê
        function generateSpeakerNameInputs() {
            const maxSpeakers = parseInt(document.getElementById('maxSpeakers').value) || 6;
            const container = document.getElementById('speakerNameInputs');
            
            container.innerHTML = speakerColors.slice(0, maxSpeakers).map((color, index) => `
                <div class="speaker-name-input">
                    <div class="speaker-indicator" style="background-color: ${color};"></div>
                    <input type="text" 
                           id="speakerName${index}" 
                           placeholder="Ë©±ËÄÖ${index + 1}" 
                           value="${speakerNames[index] || 'Ë©±ËÄÖ' + (index + 1)}"
                           onchange="updateSpeakerName(${index}, this.value)">
                </div>
            `).join('');
        }

        // Ë©±ËÄÖÂêç„ÇíÊõ¥Êñ∞
        function updateSpeakerName(index, name) {
            speakerNames[index] = name || `Ë©±ËÄÖ${index + 1}`;
        }

        // ÊúÄÂ§ßË©±ËÄÖÊï∞Â§âÊõ¥ÊôÇ„Å´ÂÖ•Âäõ„Éï„Ç£„Éº„É´„Éâ„ÇíÊõ¥Êñ∞
        document.getElementById('maxSpeakers').addEventListener('change', generateSpeakerNameInputs);

        // „Éï„Ç°„Ç§„É´ÈÅ∏ÊäûÊôÇ„ÅÆÂá¶ÁêÜ
        document.getElementById('audioFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                document.getElementById('fileName').textContent = `ÈÅ∏Êäû„Åï„Çå„Åü„Éï„Ç°„Ç§„É´: ${file.name}`;
                // „Éá„Éï„Ç©„É´„Éà„Éï„Ç°„Ç§„É´Âêç„ÇíË®≠ÂÆö
                const nameWithoutExt = file.name.replace(/\.[^/.]+$/, "");
                document.getElementById('currentFileName').value = `Èü≥Â£∞Â§âÊèõ_${nameWithoutExt}`;
            }
        });

        // Èü≥Â£∞Â§âÊèõÂá¶ÁêÜ
        async function convertAudio() {
            const fileInput = document.getElementById('audioFile');
            const speechApiKey = document.getElementById('speechApiKey').value;
            const geminiApiKey = document.getElementById('geminiApiKey').value;
            const language = document.getElementById('language').value;

            // „Éê„É™„Éá„Éº„Ç∑„Éß„É≥
            if (!fileInput.files[0]) {
                showError('Èü≥Â£∞„Éï„Ç°„Ç§„É´„ÇíÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            if (!speechApiKey) {
                showError('Google Speech-to-Text API „Ç≠„Éº„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            if (!geminiApiKey) {
                showError('Gemini API „Ç≠„Éº„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            const file = fileInput.files[0];
            
            // „É≠„Éº„Éá„Ç£„É≥„Ç∞Ë°®Á§∫
            document.getElementById('loading').classList.add('active');
            document.getElementById('convertButton').disabled = true;
            hideMessages();

            try {
                // „Éï„Ç°„Ç§„É´„ÇíBase64„Å´Â§âÊèõ
                const base64Audio = await fileToBase64(file);
                
                // Google Speech-to-Text APIÂëº„Å≥Âá∫„Åó
                const speechResult = await callSpeechToTextAPI(base64Audio, speechApiKey, language);
                
                // Gemini AI„ÅßÊñáÁ´†„ÇíÊîπÂñÑ
                const improvedText = await improvTextWithGemini(speechResult, geminiApiKey);
                
                // ÁµêÊûú„ÇíË°®Á§∫
                currentText = improvedResult.text;
                currentSpeakerData = improvedResult.speakers;
                
                if (improvedResult.speakers) {
                    displaySpeakerText(improvedResult);
                    displayMode = 'speaker';
                    document.getElementById('toggleViewButton').style.display = 'block';
                } else {
                    document.getElementById('textDisplay').textContent = improvedResult.text;
                    displayMode = 'normal';
                    document.getElementById('toggleViewButton').style.display = 'none';
                }
                
                updateTextDisplay();
                
                showSuccess('Èü≥Â£∞„ÅÆÂ§âÊèõ„ÅåÂÆå‰∫Ü„Åó„Åæ„Åó„ÅüÔºÅ');
                
            } catch (error) {
                console.error('Â§âÊèõ„Ç®„É©„Éº:', error);
                showError('Â§âÊèõ‰∏≠„Å´„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü: ' + error.message);
            } finally {
                document.getElementById('loading').classList.remove('active');
                document.getElementById('convertButton').disabled = false;
            }
        }

        // „Éï„Ç°„Ç§„É´„ÇíBase64„Å´Â§âÊèõ
        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => {
                    const base64 = reader.result.split(',')[1];
                    resolve(base64);
                };
                reader.onerror = reject;
                reader.readAsDataURL(file);
            });
        }

        // Ë®≠ÂÆö: VercelÈñ¢Êï∞„ÅÆ„Ç®„É≥„Éâ„Éù„Ç§„É≥„ÉàURL
        const SPEECH_API_PROXY = 'https://your-vercel-app.vercel.app/api/speech-to-text'; // ÂÆüÈöõ„ÅÆURL„Å´Â§âÊõ¥„Åó„Å¶„Åè„Å†„Åï„ÅÑ

        // Google Speech-to-Text APIÂëº„Å≥Âá∫„ÅóÔºàVercel„Éó„É≠„Ç≠„Ç∑ÁµåÁî±Ôºâ
        async function callSpeechToTextAPI(base64Audio, apiKey, language) {
            const enableDiarization = document.getElementById('enableDiarization').value === 'true';
            
            const config = {
                encoding: window.currentAudioEncoding || 'WEBM_OPUS',
                sampleRateHertz: 16000,
                languageCode: language,
                model: 'latest_long',
                useEnhanced: true,
                enableAutomaticPunctuation: true,
                enableWordTimeOffsets: true
            };

            // Ë©±ËÄÖË≠òÂà•„ÅåÊúâÂäπ„Å™Â†¥Âêà„ÅÆË®≠ÂÆöËøΩÂä†
            if (enableDiarization) {
                const minSpeakers = parseInt(document.getElementById('minSpeakers').value) || 2;
                const maxSpeakers = parseInt(document.getElementById('maxSpeakers').value) || 6;
                
                config.diarizationConfig = {
                    enableSpeakerDiarization: true,
                    minSpeakerCount: minSpeakers,
                    maxSpeakerCount: maxSpeakers
                };
            }

            // Vercel„Éó„É≠„Ç≠„Ç∑ÁµåÁî±„ÅßAPI„ÇíÂëº„Å≥Âá∫„Åó
            const response = await fetch(SPEECH_API_PROXY, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    audioData: base64Audio,
                    config: config,
                    apiKey: apiKey
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(`Proxy API Error: ${errorData.error || 'Unknown error'}`);
            }

            const data = await response.json();
            
            if (!data.success || !data.results || data.results.length === 0) {
                throw new Error('Èü≥Â£∞„Åã„Çâ„ÉÜ„Ç≠„Çπ„Éà„ÇíÊäΩÂá∫„Åß„Åç„Åæ„Åõ„Çì„Åß„Åó„Åü');
            }

            // Ë©±ËÄÖË≠òÂà•„ÅåÊúâÂäπ„Å™Â†¥Âêà„ÅÆÂá¶ÁêÜ
            if (enableDiarization && data.results[0].alternatives[0].words) {
                return processSpeakerDiarization(data.results);
            } else {
                // ÈÄöÂ∏∏„ÅÆ„ÉÜ„Ç≠„Çπ„ÉàÊäΩÂá∫
                return {
                    text: data.results.map(result => result.alternatives[0].transcript).join(' '),
                    speakers: null
                };
            }
        }

        // Ë©±ËÄÖË≠òÂà•ÁµêÊûú„ÅÆÂá¶ÁêÜ
        function processSpeakerDiarization(results) {
            const words = results[0].alternatives[0].words;
            const segments = [];
            let currentSpeaker = null;
            let currentSegment = '';

            words.forEach(word => {
                const speakerTag = word.speakerTag;
                
                if (currentSpeaker !== speakerTag) {
                    if (currentSegment) {
                        segments.push({
                            speaker: currentSpeaker,
                            text: currentSegment.trim()
                        });
                    }
                    currentSpeaker = speakerTag;
                    currentSegment = word.word + ' ';
                } else {
                    currentSegment += word.word + ' ';
                }
            });

            // ÊúÄÂæå„ÅÆ„Çª„Ç∞„É°„É≥„Éà„ÇíËøΩÂä†
            if (currentSegment) {
                segments.push({
                    speaker: currentSpeaker,
                    text: currentSegment.trim()
                });
            }

            return {
                text: segments.map(seg => `Ë©±ËÄÖ${seg.speaker}: ${seg.text}`).join('\n\n'),
                speakers: segments
            };
        }

        // Gemini AI„Åß„ÉÜ„Ç≠„Çπ„Éà„ÇíÊîπÂñÑÔºàË©±ËÄÖË≠òÂà•ÂØæÂøúÔºâ
        async function improvTextWithGemini(speechResult, apiKey) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-pro:generateContent?key=${apiKey}`;
            
            let prompt;
            if (speechResult.speakers) {
                prompt = `‰ª•‰∏ã„ÅØÈü≥Â£∞Ë™çË≠òÁµêÊûú„ÅßË©±ËÄÖË≠òÂà•„ÅåË°å„Çè„Çå„Å¶„ÅÑ„Åæ„Åô„ÄÇÂêÑË©±ËÄÖ„ÅÆÁô∫Ë®Ä„ÇíËá™ÁÑ∂„ÅßË™≠„Åø„ÇÑ„Åô„ÅÑÊó•Êú¨Ë™û„Å´ÊîπÂñÑ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇË©±ËÄÖ„ÅÆÂå∫Âà•„ÅØ‰øùÊåÅ„Åó„ÄÅÂè•Ë™≠ÁÇπ„ÇíÈÅ©Âàá„Å´ËøΩÂä†„Åó„ÄÅË™§Ë™çË≠ò„Åï„Çå„ÅüÈÉ®ÂàÜ„Åå„ÅÇ„Çå„Å∞‰øÆÊ≠£„Åó„Å¶„Åè„Å†„Åï„ÅÑÔºö\n\n${speechResult.text}`;
            } else {
                prompt = `‰ª•‰∏ã„ÅÆÈü≥Â£∞Ë™çË≠òÁµêÊûú„ÅÆ„ÉÜ„Ç≠„Çπ„Éà„Çí„ÄÅË™≠„Åø„ÇÑ„Åô„ÅèËá™ÁÑ∂„Å™Êó•Êú¨Ë™û„Å´ÊîπÂñÑ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇÂè•Ë™≠ÁÇπ„ÇíÈÅ©Âàá„Å´ËøΩÂä†„Åó„ÄÅÊÆµËêΩ„ÇíÊï¥ÁêÜ„Åó„ÄÅË™§Ë™çË≠ò„Åï„Çå„ÅüÈÉ®ÂàÜ„Åå„ÅÇ„Çå„Å∞‰øÆÊ≠£„Åó„Å¶„Åè„Å†„Åï„ÅÑÔºö\n\n${speechResult.text}`;
            }
            
            const requestBody = {
                contents: [{
                    parts: [{
                        text: prompt
                    }]
                }]
            };

            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestBody)
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(`Gemini API Error: ${errorData.error?.message || 'Unknown error'}`);
            }

            const data = await response.json();
            
            if (!data.candidates || data.candidates.length === 0) {
                return speechResult; // ÊîπÂñÑ„Å´Â§±Êïó„Åó„ÅüÂ†¥Âêà„ÅØÂÖÉ„ÅÆÁµêÊûú„ÇíËøî„Åô
            }

            const improvedText = data.candidates[0].content.parts[0].text;
            
            return {
                text: improvedText,
                speakers: speechResult.speakers
            };
        }

        // Ë©±ËÄÖÂà•„ÉÜ„Ç≠„Çπ„ÉàË°®Á§∫
        function displaySpeakerText(result) {
            const display = document.getElementById('textDisplay');
            display.innerHTML = '';
            display.contentEditable = false;
            
            result.speakers.forEach((segment, index) => {
                const speakerIndex = segment.speaker - 1;
                const color = speakerColors[speakerIndex % speakerColors.length];
                const speakerName = speakerNames[speakerIndex] || `Ë©±ËÄÖ${segment.speaker}`;
                
                const segmentDiv = document.createElement('div');
                segmentDiv.className = 'speaker-segment';
                segmentDiv.style.borderLeftColor = color;
                
                segmentDiv.innerHTML = `
                    <div class="speaker-label">
                        <span class="speaker-indicator" style="background-color: ${color};"></span>
                        ${speakerName}
                    </div>
                    <div class="speaker-text" contenteditable="true" data-speaker="${segment.speaker}">${segment.text}</div>
                `;
                
                display.appendChild(segmentDiv);
            });
            
            // Á∑®ÈõÜ„Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÇíËøΩÂä†
            display.querySelectorAll('.speaker-text').forEach(element => {
                element.addEventListener('input', updateSpeakerText);
            });
        }

        // Ë©±ËÄÖÂà•„ÉÜ„Ç≠„Çπ„Éà„ÅÆÊõ¥Êñ∞
        function updateSpeakerText() {
            if (currentSpeakerData) {
                const segments = document.querySelectorAll('.speaker-text');
                currentSpeakerData.forEach((segment, index) => {
                    if (segments[index]) {
                        segment.text = segments[index].textContent || segments[index].innerText;
                    }
                });
                
                // ÈÄöÂ∏∏„ÉÜ„Ç≠„Çπ„Éà„ÇÇÊõ¥Êñ∞
                currentText = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `Ë©±ËÄÖ${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            }
        }

        // Ë°®Á§∫„É¢„Éº„Éâ„ÅÆÂàá„ÇäÊõø„Åà
        function toggleDisplayMode() {
            const display = document.getElementById('textDisplay');
            const toggleButton = document.getElementById('toggleViewButton');
            
            if (displayMode === 'speaker' && currentSpeakerData) {
                // ÈÄöÂ∏∏Ë°®Á§∫„Å´Âàá„ÇäÊõø„Åà
                display.innerHTML = '';
                display.contentEditable = true;
                display.textContent = currentText;
                displayMode = 'normal';
                toggleButton.textContent = 'üë• Ë©±ËÄÖÂà•Ë°®Á§∫„Å´Âàá„ÇäÊõø„Åà';
            } else if (displayMode === 'normal' && currentSpeakerData) {
                // Ë©±ËÄÖÂà•Ë°®Á§∫„Å´Âàá„ÇäÊõø„Åà
                displaySpeakerText({ speakers: currentSpeakerData });
                displayMode = 'speaker';
                toggleButton.textContent = 'üìù ÈÄöÂ∏∏Ë°®Á§∫„Å´Âàá„ÇäÊõø„Åà';
            }
        }

        // „ÉÜ„Ç≠„Çπ„ÉàË°®Á§∫„ÅÆÊõ¥Êñ∞
        function updateTextDisplay() {
            const display = document.getElementById('textDisplay');
            const fontFamily = document.getElementById('fontFamily').value;
            const fontSize = document.getElementById('fontSize').value;
            const lineHeight = document.getElementById('lineHeight').value;

            display.style.fontFamily = fontFamily;
            display.style.fontSize = fontSize;
            display.style.lineHeight = lineHeight;

            // ÁèæÂú®„ÅÆ„ÉÜ„Ç≠„Çπ„Éà„ÇíÂèñÂæó
            if (displayMode === 'speaker') {
                updateSpeakerText();
            } else {
                currentText = display.textContent || display.innerText;
            }
        }

        // Ë©±ËÄÖ„Éá„Éº„Çø‰ªò„Åç„Åß„ÉÜ„Ç≠„Çπ„Éà„Éï„Ç°„Ç§„É´„ÉÄ„Ç¶„É≥„É≠„Éº„Éâ
        function downloadAsText() {
            let text;
            if (displayMode === 'speaker' && currentSpeakerData) {
                text = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `Ë©±ËÄÖ${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
            }
            
            const filename = document.getElementById('currentFileName').value || 'converted_text';
            
            const blob = new Blob([text], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename + '.txt';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Ë©±ËÄÖ„Éá„Éº„Çø‰ªò„Åç„ÅßWord„Éï„Ç°„Ç§„É´„ÉÄ„Ç¶„É≥„É≠„Éº„Éâ
        function downloadAsWord() {
            let text;
            let htmlContent;
            const filename = document.getElementById('currentFileName').value || 'converted_text';
            const fontFamily = document.getElementById('fontFamily').value;
            const fontSize = document.getElementById('fontSize').value;
            const lineHeight = document.getElementById('lineHeight').value;

            if (displayMode === 'speaker' && currentSpeakerData) {
                // Ë©±ËÄÖÂà•„ÅÆ„Çπ„Çø„Ç§„É´‰ªò„ÅçHTML
                const speakerHTML = currentSpeakerData.map(seg => {
                    const speakerIndex = seg.speaker - 1;
                    const color = speakerColors[speakerIndex % speakerColors.length];
                    const speakerName = speakerNames[speakerIndex] || `Ë©±ËÄÖ${seg.speaker}`;
                    
                    return `
                        <div style="margin-bottom: 20px; padding: 15px; border-left: 4px solid ${color}; background: #f8fafc;">
                            <div style="font-weight: bold; color: ${color}; margin-bottom: 8px;">
                                <span style="display: inline-block; width: 12px; height: 12px; background: ${color}; border-radius: 50%; margin-right: 8px;"></span>
                                ${speakerName}
                            </div>
                            <div style="color: #374151;">${seg.text}</div>
                        </div>
                    `;
                }).join('');
                
                htmlContent = `
                    <html>
                    <head>
                        <meta charset="utf-8">
                        <style>
                            body {
                                font-family: "${fontFamily}";
                                font-size: ${fontSize};
                                line-height: ${lineHeight};
                                margin: 40px;
                            }
                        </style>
                    </head>
                    <body>
                        ${speakerHTML}
                    </body>
                    </html>
                `;
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
                htmlContent = `
                    <html>
                    <head>
                        <meta charset="utf-8">
                        <style>
                            body {
                                font-family: "${fontFamily}";
                                font-size: ${fontSize};
                                line-height: ${lineHeight};
                                margin: 40px;
                            }
                        </style>
                    </head>
                    <body>
                        <pre style="white-space: pre-wrap; font-family: inherit;">${text}</pre>
                    </body>
                    </html>
                `;
            }

            const blob = new Blob([htmlContent], { type: 'application/msword' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename + '.doc';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }utf-8">
                    <style>
                        body {
                            font-family: "${fontFamily}";
                            font-size: ${fontSize};
                            line-height: ${lineHeight};
                            margin: 40px;
                        }
                    </style>
                </head>
                <body>
                    <pre style="white-space: pre-wrap; font-family: inherit;">${text}</pre>
                </body>
                </html>
            `;

            const blob = new Blob([htmlContent], { type: 'application/msword' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename + '.doc';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Â±•Ê≠¥„Å´‰øùÂ≠ò
        function saveToHistory() {
            let text;
            if (displayMode === 'speaker' && currentSpeakerData) {
                text = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `Ë©±ËÄÖ${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
            }
            
            const filename = document.getElementById('currentFileName').value || 'untitled';
            
            if (!text || text.trim() === '' || text === '„Åì„Åì„Å´Â§âÊèõ„Åï„Çå„Åü„ÉÜ„Ç≠„Çπ„Éà„ÅåË°®Á§∫„Åï„Çå„Åæ„Åô...') {
                showError('‰øùÂ≠ò„Åô„Çã„ÉÜ„Ç≠„Çπ„Éà„Åå„ÅÇ„Çä„Åæ„Åõ„Çì');
                return;
            }

            const historyItem = {
                id: Date.now(),
                filename: filename,
                text: text,
                date: new Date().toLocaleString('ja-JP'),
                fontSettings: {
                    fontFamily: document.getElementById('fontFamily').value,
                    fontSize: document.getElementById('fontSize').value,
                    lineHeight: document.getElementById('lineHeight').value
                },
                speakerData: currentSpeakerData,
                speakerNames: {...speakerNames},
                hasSpeakers: currentSpeakerData !== null
            };

            historyData.unshift(historyItem);
            saveHistoryToStorage();
            displayHistory();
            
            showSuccess('Â±•Ê≠¥„Å´‰øùÂ≠ò„Åó„Åæ„Åó„Åü');
        }

        // Â±•Ê≠¥„ÇíË°®Á§∫
        function displayHistory(filteredData = null) {
            const historyList = document.getElementById('historyList');
            const data = filteredData || historyData;
            
            if (data.length === 0) {
                historyList.innerHTML = '<p style="text-align: center; color: #6b7280; padding: 40px;">Â±•Ê≠¥„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</p>';
                return;
            }

            historyList.innerHTML = data.map(item => `
                <div class="history-item" id="history-${item.id}">
                    <div class="history-header">
                        <div class="history-filename" id="filename-display-${item.id}">
                            ${item.hasSpeakers ? 'üë• ' : ''}${item.filename}
                        </div>
                        <div class="history-date">${item.date}</div>
                    </div>
                    <div class="filename-edit" id="filename-edit-${item.id}">
                        <input type="text" value="${item.filename}" id="filename-input-${item.id}">
                        <button onclick="saveFilenameEdit(${item.id})">‰øùÂ≠ò</button>
                        <button onclick="cancelFilenameEdit(${item.id})" style="background: #6b7280;">„Ç≠„É£„É≥„Çª„É´</button>
                    </div>
                    <div class="history-text-preview">${item.text.substring(0, 100)}...</div>
                    <div class="history-actions">
                        <button class="action-button edit-button" onclick="editFilename(${item.id})">üìù ÂêçÂâçÂ§âÊõ¥</button>
                        <button class="action-button load-button" onclick="loadFromHistory(${item.id})">üìÇ Ë™≠„ÅøËæº„Åø</button>
                        <button class="action-button delete-button" onclick="deleteFromHistory(${item.id})">üóëÔ∏è ÂâäÈô§</button>
                    </div>
                </div>
            `).join('');
        }

        // Â±•Ê≠¥Ê§úÁ¥¢
        function searchHistory() {
            const searchTerm = document.getElementById('searchHistory').value.toLowerCase();
            
            if (searchTerm === '') {
                displayHistory();
                return;
            }

            const filteredData = historyData.filter(item => 
                item.filename.toLowerCase().includes(searchTerm) ||
                item.text.toLowerCase().includes(searchTerm)
            );
            
            displayHistory(filteredData);
        }

        // Â±•Ê≠¥„Åã„ÇâË™≠„ÅøËæº„Åø
        function loadFromHistory(id) {
            const item = historyData.find(h => h.id === id);
            if (!item) return;

            currentText = item.text;
            currentSpeakerData = item.speakerData || null;
            
            // Ë©±ËÄÖÂêç„ÇíÂæ©ÂÖÉ
            if (item.speakerNames) {
                speakerNames = {...item.speakerNames};
                generateSpeakerNameInputs();
            }
            
            // Ë°®Á§∫„ÇíÊõ¥Êñ∞
            if (item.hasSpeakers && item.speakerData) {
                displaySpeakerText({ speakers: item.speakerData });
                displayMode = 'speaker';
                document.getElementById('toggleViewButton').style.display = 'block';
                document.getElementById('toggleViewButton').textContent = 'üìù ÈÄöÂ∏∏Ë°®Á§∫„Å´Âàá„ÇäÊõø„Åà';
            } else {
                document.getElementById('textDisplay').innerHTML = '';
                document.getElementById('textDisplay').contentEditable = true;
                document.getElementById('textDisplay').textContent = item.text;
                displayMode = 'normal';
                document.getElementById('toggleViewButton').style.display = 'none';
            }
            
            document.getElementById('currentFileName').value = item.filename;
            
            // „Éï„Ç©„É≥„ÉàË®≠ÂÆö„ÇÇÂæ©ÂÖÉ
            document.getElementById('fontFamily').value = item.fontSettings?.fontFamily || 'Noto Sans JP';
            document.getElementById('fontSize').value = item.fontSettings?.fontSize || '16px';
            document.getElementById('lineHeight').value = item.fontSettings?.lineHeight || '1.8';
            
            updateTextDisplay();
            showSuccess('Â±•Ê≠¥„Åã„ÇâË™≠„ÅøËæº„Åø„Åæ„Åó„Åü');
        }

        // „Éï„Ç°„Ç§„É´ÂêçÁ∑®ÈõÜ
        function editFilename(id) {
            document.getElementById(`filename-display-${id}`).style.display = 'none';
            document.getElementById(`filename-edit-${id}`).style.display = 'flex';
        }

        function saveFilenameEdit(id) {
            const newFilename = document.getElementById(`filename-input-${id}`).value.trim();
            if (!newFilename) {
                showError('„Éï„Ç°„Ç§„É´Âêç„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            const item = historyData.find(h => h.id === id);
            if (item) {
                item.filename = newFilename;
                saveHistoryToStorage();
                displayHistory();
                showSuccess('„Éï„Ç°„Ç§„É´Âêç„ÇíÊõ¥Êñ∞„Åó„Åæ„Åó„Åü');
            }
        }

        function cancelFilenameEdit(id) {
            document.getElementById(`filename-display-${id}`).style.display = 'block';
            document.getElementById(`filename-edit-${id}`).style.display = 'none';
        }

        // Â±•Ê≠¥„Åã„ÇâÂâäÈô§
        function deleteFromHistory(id) {
            if (confirm('„Åì„ÅÆÂ±•Ê≠¥„ÇíÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü')) {
                historyData = historyData.filter(h => h.id !== id);
                saveHistoryToStorage();
                displayHistory();
                showSuccess('Â±•Ê≠¥„ÇíÂâäÈô§„Åó„Åæ„Åó„Åü');
            }
        }

        // Â±•Ê≠¥„ÅÆ‰øùÂ≠ò„Å®Ë™≠„ÅøËæº„ÅøÔºà„É°„É¢„É™ÂÜÖÔºâ
        function saveHistoryToStorage() {
            // „Éñ„É©„Ç¶„Ç∂Áí∞Â¢É„Åß„ÅØ localStorage „Çí‰ΩøÁî®„Åó„Å™„ÅÑ„Åü„ÇÅ„ÄÅ„É°„É¢„É™ÂÜÖ„Å´‰øùÊåÅ
            // ÂÆüÈöõ„ÅÆÁí∞Â¢É„Åß„ÅØ localStorage.setItem('speechToTextHistory', JSON.stringify(historyData)); „Çí‰ΩøÁî®
        }

        function loadHistoryFromStorage() {
            // „Éñ„É©„Ç¶„Ç∂Áí∞Â¢É„Åß„ÅØ localStorage „Çí‰ΩøÁî®„Åó„Å™„ÅÑ„Åü„ÇÅ„ÄÅÁ©∫„ÅÆÈÖçÂàó„ÅßÂàùÊúüÂåñ
            // ÂÆüÈöõ„ÅÆÁí∞Â¢É„Åß„ÅØ const saved = localStorage.getItem('speechToTextHistory'); „Çí‰ΩøÁî®
            // if (saved) { historyData = JSON.parse(saved); }
            historyData = [];
        }

        // „Ç®„É©„Éº„É°„ÉÉ„Çª„Éº„Ç∏Ë°®Á§∫
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }

        // ÊàêÂäü„É°„ÉÉ„Çª„Éº„Ç∏Ë°®Á§∫
        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 3000);
        }

        // „É°„ÉÉ„Çª„Éº„Ç∏„ÇíÈùûË°®Á§∫
        function hideMessages() {
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }

        // „ÉÜ„Ç≠„Çπ„ÉàË°®Á§∫„Ç®„É™„Ç¢„ÅÆÁ∑®ÈõÜÊôÇ„Å´ÁèæÂú®„ÅÆ„ÉÜ„Ç≠„Çπ„Éà„ÇíÊõ¥Êñ∞
        document.getElementById('textDisplay').addEventListener('input', function() {
            currentText = this.textContent || this.innerText;
        });

        // „Ç®„É≥„Çø„Éº„Ç≠„Éº„Åß„ÅÆÊ§úÁ¥¢
        document.getElementById('searchHistory').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchHistory();
            }
        });

        // API„Ç≠„Éº„ÅÆ‰øùÂ≠òÔºà„Çª„ÉÉ„Ç∑„Éß„É≥‰∏≠„ÅÆ„ÅøÔºâ
        document.getElementById('speechApiKey').addEventListener('change', function() {
            // ÂÆüÈöõ„ÅÆÁí∞Â¢É„Åß„ÅØ sessionStorage „Å´‰øùÂ≠òÂèØËÉΩ
            // sessionStorage.setItem('speechApiKey', this.value);
        });

        document.getElementById('geminiApiKey').addEventListener('change', function() {
            // ÂÆüÈöõ„ÅÆÁí∞Â¢É„Åß„ÅØ sessionStorage „Å´‰øùÂ≠òÂèØËÉΩ
            // sessionStorage.setItem('geminiApiKey', this.value);
        });

        // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´API„Ç≠„Éº„ÇíÂæ©ÂÖÉ
        // ÂÆüÈöõ„ÅÆÁí∞Â¢É„Åß„ÅØ‰ª•‰∏ã„ÅÆ„Ç≥„Éº„Éâ„Çí‰ΩøÁî®
        /*
