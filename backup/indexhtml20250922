        // ãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹ç›£è¦–
        function logPerformance() {
            if (typeof performance !== 'undefined' && performance.timing) {
                const timing = performance.timing;
                const loadTime = timing.loadEventEnd - timing.navigationStart;
                console.log(`ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚é–“: ${loadTime}ms`);
            }
        }

        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿å®Œäº†å¾Œã«ãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹ã‚’ãƒ­ã‚°
        window.addEventListener('load', function() {
            setTimeout(logPerformance, 1000);
        });

        // ãƒ¡ãƒ¢ãƒªä½¿ç”¨é‡ç›£è¦–ï¼ˆé–‹ç™ºç”¨ï¼‰
        function logMemoryUsage() {
            if (typeof performance !== 'undefined' && performance.memory) {
                const memory = performance.memory;
                console.log('ãƒ¡ãƒ¢ãƒªä½¿ç”¨çŠ¶æ³:', {
                    used: Math.round(memory.usedJSHeapSize / 1048576) + 'MB',
                    total: Math.round(memory.totalJSHeapSize / 1048576) + 'MB',
                    limit: Math.round(memory.jsHeapSizeLimit / 1048576) + 'MB'
                });
            }
        }

        // 5åˆ†ã”ã¨ã«ãƒ¡ãƒ¢ãƒªä½¿ç”¨é‡ã‚’ãƒ­ã‚°ï¼ˆé–‹ç™ºæ™‚ã®ã¿ï¼‰
        // setInterval(logMemoryUsage, 300000);

        // ãƒ¦ãƒ¼ã‚¶ãƒ“ãƒªãƒ†ã‚£å‘ä¸Šã®ãŸã‚ã®æ©Ÿèƒ½
        function setupAccessibilityFeatures() {
            // ã‚­ãƒ¼ãƒœãƒ¼ãƒ‰ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³ã‚µãƒãƒ¼ãƒˆ
            document.addEventListener('keydown', function(e) {
                // Tabã‚­ãƒ¼ã§ã®ãƒ•ã‚©ãƒ¼ã‚«ã‚¹ç®¡ç†
                if (e.key === 'Tab') {
                    // å¿…è¦ã«å¿œã˜ã¦ãƒ•ã‚©ãƒ¼ã‚«ã‚¹é †åºã‚’ã‚«ã‚¹ã‚¿ãƒã‚¤ã‚º
                }
                
                // Escã‚­ãƒ¼ã§ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚„ã‚¨ãƒ©ãƒ¼ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’é–‰ã˜ã‚‹
                if (e.key === 'Escape') {
                    hideMessages();
                }
            });

            // é«˜ã‚³ãƒ³ãƒˆãƒ©ã‚¹ãƒˆãƒ¢ãƒ¼ãƒ‰ã®æ¤œå‡º
            if (window.matchMedia && window.matchMedia('(prefers-contrast: high)').matches) {
                document.body.classList.add('high-contrast');
            }

            // ãƒ€ãƒ¼ã‚¯ãƒ¢ãƒ¼ãƒ‰ã®æ¤œå‡º
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.body.classList.add('dark-mode');
            }

            // ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ç„¡åŠ¹åŒ–ã®æ¤œå‡º
            if (window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
                document.body.classList.add('reduced-motion');
            }
        }

        // ã‚¢ã‚¯ã‚»ã‚·ãƒ“ãƒªãƒ†ã‚£æ©Ÿèƒ½ã®åˆæœŸåŒ–
        setupAccessibilityFeatures();

        // ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ–å¯¾å¿œã®ãŸã‚ã®ç”»é¢ã‚µã‚¤ã‚ºç›£è¦–
        function handleResize() {
            const width = window.innerWidth;
            
            // ãƒ¢ãƒã‚¤ãƒ«è¡¨ç¤ºã®èª¿æ•´
            if (width < 768) {
                document.body.classList.add('mobile');
                document.body.classList.remove('desktop');
            } else {
                document.body.classList.add('desktop');
                document.body.classList.remove('mobile');
            }
        }

        // åˆå›å®Ÿè¡Œã¨ãƒªã‚µã‚¤ã‚ºã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
        handleResize();
        window.addEventListener('resize', handleResize);

        // ãƒ—ãƒªãƒ³ãƒˆã‚¹ã‚¿ã‚¤ãƒ«å¯¾å¿œ
        window.addEventListener('beforeprint', function() {
            // å°åˆ·å‰ã«UIè¦ç´ ã‚’èª¿æ•´
            const elementsToHide = ['.upload-section', '.download-controls', '.history-section'];
            elementsToHide.forEach(selector => {
                const elements = document.querySelectorAll(selector);
                elements.forEach(el => el.style.display = 'none');
            });
        });

        window.addEventListener('afterprint', function() {
            // å°åˆ·å¾Œã«UIè¦ç´ ã‚’å¾©å…ƒ
            const elementsToShow = ['.upload-section', '.download-controls', '.history-section'];
            elementsToShow.forEach(selector => {
                const elements = document.querySelectorAll(selector);
                elements.forEach(el => el.style.display = '');
            });
        });

        // ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰æ©Ÿèƒ½
        async function copyToClipboard(text) {
            try {
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(text);
                    showSuccess('ãƒ†ã‚­ã‚¹ãƒˆã‚’ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã«ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸ');
                } else {
                    // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯æ–¹æ³•
                    const textArea = document.createElement('textarea');
                    textArea.value = text;
                    document.body.appendChild(textArea);
                    textArea.focus();
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    showSuccess('ãƒ†ã‚­ã‚¹ãƒˆã‚’ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã«ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸ');
                }
            } catch (error) {
                console.error('ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã¸ã®ã‚³ãƒ”ãƒ¼ã«å¤±æ•—:', error);
                showError('ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã¸ã®ã‚³ãƒ”ãƒ¼ã«å¤±æ•—ã—ã¾ã—ãŸ');
            }
        }

        // ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ãƒœã‚¿ãƒ³ã‚’è¿½åŠ ï¼ˆã‚ªãƒ—ã‚·ãƒ§ãƒ³ï¼‰
        function addCopyButton() {
            const copyButton = document.createElement('button');
            copyButton.textContent = 'ğŸ“‹ ãƒ†ã‚­ã‚¹ãƒˆã‚’ã‚³ãƒ”ãƒ¼';
            copyButton.className = 'download-button';
            copyButton.onclick = function() {
                const text = document.getElementById('textDisplay').textContent || currentText;
                copyToClipboard(text);
            };
            
            const downloadControls = document.querySelector('.download-controls');
            if (downloadControls) {
                downloadControls.appendChild(copyButton);
            }
        }

        // ã‚³ãƒ”ãƒ¼ãƒœã‚¿ãƒ³ã‚’è¿½åŠ ï¼ˆå¿…è¦ã«å¿œã˜ã¦ï¼‰
        setTimeout(addCopyButton, 1000);

        // æœ€çµ‚çš„ãªåˆæœŸåŒ–ç¢ºèª
        console.log('ğŸ‰ éŸ³å£°ãƒ†ã‚­ã‚¹ãƒˆå¤‰æ›ã‚¢ãƒ—ãƒªã®åˆæœŸåŒ–ãŒå®Œäº†ã—ã¾ã—ãŸ');
        console.log('ğŸ“ ä½¿ç”¨æ–¹æ³•:');
        console.log('1. éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„');
        console.log('2. å¿…è¦ã«å¿œã˜ã¦è©±è€…è­˜åˆ¥ã‚’æœ‰åŠ¹ã«ã—ã¦ãã ã•ã„');
        console.log('3. "ãƒ†ã‚­ã‚¹ãƒˆå¤‰æ›ã‚’é–‹å§‹" ãƒœã‚¿ãƒ³ã‚’ã‚¯ãƒªãƒƒã‚¯ã—ã¦ãã ã•ã„');
        console.log('');
        console.log('âš ï¸ æ³¨æ„: Vercel ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆURLã‚’å®Ÿéš›ã®URLã«å¤‰æ›´ã—ã¦ãã ã•ã„');
        console.log('   ç¾åœ¨ã®è¨­å®š:', SPEECH_API_PROXY);

    </script>
