        function handleFileSelect() {
            console.log('ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠãƒœã‚¿ãƒ³ãŒã‚¯ãƒªãƒƒã‚¯ã•ã‚Œã¾ã—ãŸ');
            const fileInput = document.getElementById('audioFile');
            if (fileInput) {
                fileInput.click();
                console.log('ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠãƒ€ã‚¤ã‚¢ãƒ­ã‚°ã‚’é–‹ãã¾ã—ãŸ');
            } else {
                console.error('audioFileè¦ç´ ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
                showError('ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠæ©Ÿèƒ½ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
            }
        }

        // è©±è€…è­˜åˆ¥è¨­å®šã®è¡¨ç¤º/éè¡¨ç¤º
        function toggleDiarizationSettings() {
            const enableDiarization = document.getElementById('enableDiarization').value === 'true';
            const diarizationSettings = document.getElementById('diarizationSettings');
            const speakerNames = document.getElementById('speakerNames');
            
            if (enableDiarization) {
                diarizationSettings.style.display = 'block';
                speakerNames.style.display = 'block';
                generateSpeakerNameInputs();
            } else {
                diarizationSettings.style.display = 'none';
                speakerNames.style.display = 'none';
            }
        }

        // è©±è€…åå…¥åŠ›ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‚’ç”Ÿæˆ
        function generateSpeakerNameInputs() {
            const maxSpeakers = parseInt(document.getElementById('maxSpeakers').value) || 6;
            const container = document.getElementById('speakerNameInputs');
            
            container.innerHTML = speakerColors.slice(0, maxSpeakers).map((color, index) => `
                <div class="speaker-name-input">
                    <div class="speaker-indicator" style="background-color: ${color};"></div>
                    <input type="text" 
                           id="speakerName${index}" 
                           placeholder="è©±è€…${index + 1}" 
                           value="${speakerNames[index] || 'è©±è€…' + (index + 1)}"
                           onchange="updateSpeakerName(${index}, this.value)">
                </div>
            `).join('');
        }

        // è©±è€…åã‚’æ›´æ–°
        function updateSpeakerName(index, name) {
            speakerNames[index] = name || `è©±è€…${index + 1}`;
        }

        // ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠæ™‚ã®å‡¦ç†ï¼ˆãƒ‡ãƒãƒƒã‚°å¼·åŒ–ç‰ˆï¼‰
        document.getElementById('audioFile').addEventListener('change', function(e) {
            console.log('ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠã‚¤ãƒ™ãƒ³ãƒˆãŒç™ºç«ã—ã¾ã—ãŸ');
            const file = e.target.files[0];
            console.log('é¸æŠã•ã‚ŒãŸãƒ•ã‚¡ã‚¤ãƒ«:', file);
            
            if (file) {
                const fileNameDiv = document.getElementById('fileName');
                const fileSizeMB = (file.size / 1024 / 1024).toFixed(2);
                
                console.log('ãƒ•ã‚¡ã‚¤ãƒ«å:', file.name);
                console.log('ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚º:', fileSizeMB + 'MB');
                console.log('ãƒ•ã‚¡ã‚¤ãƒ«ã‚¿ã‚¤ãƒ—:', file.type);
                
                // ãƒ•ã‚¡ã‚¤ãƒ«åè¡¨ç¤ºã‚’æ›´æ–°
                if (fileNameDiv) {
                    fileNameDiv.textContent = `âœ… é¸æŠã•ã‚ŒãŸãƒ•ã‚¡ã‚¤ãƒ«: ${file.name} (${fileSizeMB}MB)`;
                    fileNameDiv.style.display = 'block';
                    console.log('ãƒ•ã‚¡ã‚¤ãƒ«åè¡¨ç¤ºã‚’æ›´æ–°ã—ã¾ã—ãŸ');
                } else {
                    console.error('fileNameè¦ç´ ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
                }
                
                // ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆãƒ•ã‚¡ã‚¤ãƒ«åã‚’è¨­å®š
                const nameWithoutExt = file.name.replace(/\.[^/.]+$/, "");
                const currentFileNameInput = document.getElementById('currentFileName');
                if (currentFileNameInput) {
                    currentFileNameInput.value = `éŸ³å£°å¤‰æ›_${nameWithoutExt}`;
                    console.log('ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆãƒ•ã‚¡ã‚¤ãƒ«åã‚’è¨­å®šã—ã¾ã—ãŸ:', currentFileNameInput.value);
                } else {
                    console.error('currentFileNameè¦ç´ ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
                }
                
                // ãƒ•ã‚¡ã‚¤ãƒ«å½¢å¼ã«å¿œã˜ã¦ã‚¨ãƒ³ã‚³ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¨­å®šã‚’èª¿æ•´
                updateAudioConfig(file);
                
                // æˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
                showSuccess(`ãƒ•ã‚¡ã‚¤ãƒ« "${file.name}" ãŒé¸æŠã•ã‚Œã¾ã—ãŸ`);
                
            } else {
                console.log('ãƒ•ã‚¡ã‚¤ãƒ«ãŒé¸æŠã•ã‚Œã¦ã„ã¾ã›ã‚“');
                // ãƒ•ã‚¡ã‚¤ãƒ«åè¡¨ç¤ºã‚’ã‚¯ãƒªã‚¢
                const fileNameDiv = document.getElementById('fileName');
                if (fileNameDiv) {
                    fileNameDiv.style.display = 'none';
                }
            }
        });

        // éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«å½¢å¼ã®è‡ªå‹•æ¤œå‡ºã¨è¨­å®šèª¿æ•´ï¼ˆã‚¨ãƒ©ãƒ¼ãƒãƒ³ãƒ‰ãƒªãƒ³ã‚°è¿½åŠ ï¼‰
        function updateAudioConfig(file) {
            try {
                console.log('éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«è¨­å®šã‚’æ›´æ–°ä¸­...');
                // ãƒ•ã‚¡ã‚¤ãƒ«æ‹¡å¼µå­ã«åŸºã¥ã„ã¦ã‚¨ãƒ³ã‚³ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¨­å®šã‚’æ±ºå®š
                const extension = file.name.split('.').pop().toLowerCase();
                let encoding = 'MP3'; // ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ
                
                switch(extension) {
                    case 'mp3':
                        encoding = 'MP3';
                        break;
                    case 'wav':
                        encoding = 'LINEAR16';
                        break;
                    case 'flac':
                        encoding = 'FLAC';
                        break;
                    case 'm4a':
                        encoding = 'MP3'; // M4Aã¯MP3ã¨ã—ã¦å‡¦ç†
                        break;
                    default:
                        encoding = 'MP3';
                        console.warn('æœªçŸ¥ã®ãƒ•ã‚¡ã‚¤ãƒ«å½¢å¼:', extension, 'MP3ã¨ã—ã¦å‡¦ç†ã—ã¾ã™');
                }
                
                // ã“ã®æƒ…å ±ã‚’å¾Œã§ä½¿ç”¨ã™ã‚‹ãŸã‚ã«ä¿å­˜
                window.currentAudioEncoding = encoding;
                console.log('éŸ³å£°ã‚¨ãƒ³ã‚³ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¨­å®š:', encoding);
                
            } catch (error) {
                console.error('éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«è¨­å®šã‚¨ãƒ©ãƒ¼:', error);
                window.currentAudioEncoding = 'MP3'; // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
            }
        }

        // éŸ³å£°å¤‰æ›å‡¦ç†ï¼ˆã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆå¯¾å¿œãƒ»ã‚¨ãƒ©ãƒ¼ãƒãƒ³ãƒ‰ãƒªãƒ³ã‚°å¼·åŒ–ï¼‰
        async function convertAudio() {
            const fileInput = document.getElementById('audioFile');
            const language = document.getElementById('language').value;

            // ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³
            if (!fileInput.files[0]) {
                showError('éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„');
                return;
            }

            const file = fileInput.files[0];
            
// å¤§å®¹é‡éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†ã‚·ã‚¹ãƒ†ãƒ 
// ãƒ•ãƒ­ãƒ³ãƒˆã‚¨ãƒ³ãƒ‰ï¼ˆHTML/JavaScriptï¼‰
class LargeAudioProcessor {
    constructor() {
        this.uploadMethod = 'cloud_storage'; // 'cloud_storage', 'drive_upload', 'streaming'
        this.maxChunkSize = 50 * 1024 * 1024; // 50MB chunks
        this.supportedFormats = ['mp3', 'wav', 'flac', 'm4a', 'aac'];
    }

    // ãƒ¡ã‚¤ãƒ³å‡¦ç†ãƒ¡ã‚½ãƒƒãƒ‰
    async processLargeAudioFile(file) {
        console.log(`å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†é–‹å§‹: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)}MB)`);
        
        try {
            // ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºã«å¿œã˜ã¦å‡¦ç†æ–¹æ³•ã‚’é¸æŠ
            if (file.size <= 4 * 1024 * 1024) {
                // 15MBä»¥ä¸‹: ç›´æ¥å‡¦ç†
                return await this.processDirectUpload(file);
            } else if (file.size <= 120 * 1024 * 1024) {
                // 120MBä»¥ä¸‹: Cloud StorageçµŒç”±
                return await this.processViaCloudStorage(file);
            } else if (file.size <= 1024 * 1024 * 1024) {
                // 1GBä»¥ä¸‹: Google DriveçµŒç”±
                return await this.processViaGoogleDrive(file);
            } else {
                // 1GBè¶…: ã‚¹ãƒˆãƒªãƒ¼ãƒŸãƒ³ã‚°å‡¦ç†
                return await this.processViaStreaming(file);
            }
        } catch (error) {
            console.error('å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
            throw error;
        }
    }

    // æ–¹æ³•1: Cloud StorageçµŒç”±å‡¦ç†
    async processViaCloudStorage(file) {
        const uploadProgress = this.createProgressBar('Cloud Storageã«ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ä¸­...');
        
        try {
            // 1. ç½²åä»˜ãURLã‚’å–å¾—
            const signedUrlResponse = await fetch('/api/get-signed-url', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    fileName: file.name,
                    fileSize: file.size,
                    contentType: file.type
                })
            });
            
            const { signedUrl, objectName } = await signedUrlResponse.json();
            
            // 2. Cloud Storageã«ç›´æ¥ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
            await this.uploadToCloudStorage(file, signedUrl, uploadProgress);
            
            // 3. Speech-to-Textå‡¦ç†ã‚’é–‹å§‹
            const processResponse = await fetch('/api/process-large-audio', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    objectName: objectName,
                    config: {
                        languageCode: document.getElementById('language').value,
                        enableDiarization: document.getElementById('enableDiarization').value === 'true',
                        minSpeakers: parseInt(document.getElementById('minSpeakers').value) || 2,
                        maxSpeakers: parseInt(document.getElementById('maxSpeakers').value) || 6
                    }
                })
            });
            
            const result = await processResponse.json();
            this.removeProgressBar(uploadProgress);
            
            return result;
            
        } catch (error) {
            this.removeProgressBar(uploadProgress);
            throw error;
        }
    }

    // æ–¹æ³•2: Google DriveçµŒç”±å‡¦ç†
    async processViaGoogleDrive(file) {
        const uploadProgress = this.createProgressBar('Google Driveã«ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ä¸­...');
        
        try {
            // Google Drive APIã‚’ä½¿ç”¨ã—ã¦ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
            const driveFileId = await this.uploadToGoogleDrive(file, uploadProgress);
            
            // DriveçµŒç”±ã§Speech-to-Textå‡¦ç†
            const processResponse = await fetch('/api/process-drive-audio', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    driveFileId: driveFileId,
                    config: {
                        languageCode: document.getElementById('language').value,
                        enableDiarization: document.getElementById('enableDiarization').value === 'true'
                    }
                })
            });
            
            const result = await processResponse.json();
            this.removeProgressBar(uploadProgress);
            
            return result;
            
        } catch (error) {
            this.removeProgressBar(uploadProgress);
            throw error;
        }
    }

    // æ–¹æ³•3: ã‚¹ãƒˆãƒªãƒ¼ãƒŸãƒ³ã‚°å‡¦ç†ï¼ˆè¶…å¤§å®¹é‡å¯¾å¿œï¼‰
    async processViaStreaming(file) {
        const chunks = this.createFileChunks(file, this.maxChunkSize);
        const results = [];
        
        for (let i = 0; i < chunks.length; i++) {
            const chunk = chunks[i];
            const progress = this.createProgressBar(`ãƒãƒ£ãƒ³ã‚¯ ${i + 1}/${chunks.length} å‡¦ç†ä¸­...`);
            
            try {
                // ãƒãƒ£ãƒ³ã‚¯ã”ã¨ã«å‡¦ç†
                const chunkResult = await this.processChunk(chunk, i);
                results.push(chunkResult);
                
                this.removeProgressBar(progress);
                
                // å‡¦ç†é–“éš”ã‚’è¨­ã‘ã‚‹ï¼ˆãƒ¬ãƒ¼ãƒˆåˆ¶é™å¯¾ç­–ï¼‰
                if (i < chunks.length - 1) {
                    await this.sleep(2000);
                }
                
            } catch (error) {
                this.removeProgressBar(progress);
                console.error(`ãƒãƒ£ãƒ³ã‚¯ ${i + 1} ã®å‡¦ç†ã§ã‚¨ãƒ©ãƒ¼:`, error);
                // ã‚¨ãƒ©ãƒ¼ãŒã‚ã£ã¦ã‚‚ç¶šè¡Œã™ã‚‹ã‹åˆ¤å®š
                if (!this.shouldContinueOnError(error)) {
                    throw error;
                }
            }
        }
        
        // çµæœã‚’ãƒãƒ¼ã‚¸
        return this.mergeChunkResults(results);
    }

    // Cloud Storageã¸ã®ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
    async uploadToCloudStorage(file, signedUrl, progressBar) {
        return new Promise((resolve, reject) => {
            const xhr = new XMLHttpRequest();
            
            xhr.upload.addEventListener('progress', (e) => {
                if (e.lengthComputable) {
                    const percentComplete = (e.loaded / e.total) * 100;
                    this.updateProgressBar(progressBar, percentComplete);
                }
            });
            
            xhr.addEventListener('load', () => {
                if (xhr.status === 200) {
                    resolve();
                } else {
                    reject(new Error(`ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã‚¨ãƒ©ãƒ¼: ${xhr.status}`));
                }
            });
            
            xhr.addEventListener('error', () => {
                reject(new Error('ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯ã‚¨ãƒ©ãƒ¼'));
            });
            
            xhr.open('PUT', signedUrl);
            xhr.setRequestHeader('Content-Type', file.type);
            xhr.send(file);
        });
    }

    // Google Driveã¸ã®ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
    async uploadToGoogleDrive(file, progressBar) {
        // Google Drive API v3ã‚’ä½¿ç”¨
        const metadata = {
            name: file.name,
            parents: ['your-drive-folder-id'] // å°‚ç”¨ãƒ•ã‚©ãƒ«ãƒ€ID
        };
        
        const form = new FormData();
        form.append('metadata', new Blob([JSON.stringify(metadata)], { type: 'application/json' }));
        form.append('file', file);
        
        const response = await fetch('https://www.googleapis.com/upload/drive/v3/files?uploadType=multipart', {
            method: 'POST',
            headers: {
                'Authorization': `Bearer ${await this.getGoogleAccessToken()}`
            },
            body: form
        });
        
        const result = await response.json();
        return result.id;
    }

    // ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ãƒãƒ£ãƒ³ã‚¯ã«åˆ†å‰²
    createFileChunks(file, chunkSize) {
        const chunks = [];
        let start = 0;
        
        while (start < file.size) {
            const end = Math.min(start + chunkSize, file.size);
            chunks.push({
                data: file.slice(start, end),
                start: start,
                end: end,
                index: chunks.length
            });
            start = end;
        }
        
        return chunks;
    }

    // ãƒãƒ£ãƒ³ã‚¯å‡¦ç†
    async processChunk(chunk, index) {
        const base64Data = await this.fileToBase64(chunk.data);
        
        const response = await fetch('/api/process-audio-chunk', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                audioData: base64Data,
                chunkIndex: index,
                startTime: this.calculateStartTime(chunk.start),
                config: {
                    encoding: 'MP3',
                    sampleRateHertz: 16000,
                    languageCode: document.getElementById('language').value
                }
            })
        });
        
        return await response.json();
    }

    // ãƒãƒ£ãƒ³ã‚¯çµæœã‚’ãƒãƒ¼ã‚¸
    mergeChunkResults(results) {
        const mergedText = results
            .filter(result => result.success)
            .map(result => result.transcript)
            .join(' ');
        
        return {
            success: true,
            text: mergedText,
            totalChunks: results.length,
            processedChunks: results.filter(r => r.success).length
        };
    }

    // ãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼ä½œæˆ
    createProgressBar(message) {
        const progressContainer = document.createElement('div');
        progressContainer.className = 'progress-container';
        progressContainer.innerHTML = `
            <div class="progress-message">${message}</div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: 0%"></div>
            </div>
            <div class="progress-percent">0%</div>
        `;
        
        document.body.appendChild(progressContainer);
        return progressContainer;
    }

    // ãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼æ›´æ–°
    updateProgressBar(progressBar, percent) {
        const fill = progressBar.querySelector('.progress-fill');
        const percentText = progressBar.querySelector('.progress-percent');
        
        fill.style.width = `${percent}%`;
        percentText.textContent = `${Math.round(percent)}%`;
    }

    // ãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼å‰Šé™¤
    removeProgressBar(progressBar) {
        if (progressBar && progressBar.parentNode) {
            progressBar.parentNode.removeChild(progressBar);
        }
    }

    // ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£ãƒ¡ã‚½ãƒƒãƒ‰
    fileToBase64(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = reject;
            reader.readAsDataURL(file);
        });
    }

    sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }

    calculateStartTime(byteOffset) {
        // éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã®ãƒ“ãƒƒãƒˆãƒ¬ãƒ¼ãƒˆã‹ã‚‰æ™‚é–“ã‚’è¨ˆç®—ï¼ˆæ¦‚ç®—ï¼‰
        const estimatedBitrate = 128000; // 128kbps
        const bytesPerSecond = estimatedBitrate / 8;
        return Math.floor(byteOffset / bytesPerSecond);
    }

    shouldContinueOnError(error) {
        // ä¸€æ™‚çš„ãªã‚¨ãƒ©ãƒ¼ã®å ´åˆã¯ç¶šè¡Œ
        const temporaryErrors = ['timeout', 'rate_limit', 'temporary'];
        return temporaryErrors.some(keyword => 
            error.message.toLowerCase().includes(keyword)
        );
    }

    async getGoogleAccessToken() {
        // OAuth2ãƒˆãƒ¼ã‚¯ãƒ³ã‚’å–å¾—ï¼ˆå®Ÿè£…ãŒå¿…è¦ï¼‰
        // ã¾ãŸã¯ã€ã‚µãƒ¼ãƒãƒ¼ã‚µã‚¤ãƒ‰ã§ãƒˆãƒ¼ã‚¯ãƒ³ã‚’ç®¡ç†
        const response = await fetch('/api/get-google-token');
        const data = await response.json();
        return data.access_token;
    }
}

// ä½¿ç”¨ä¾‹
const processor = new LargeAudioProcessor();

// å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†ã®çµ±åˆ
async function handleLargeFileConversion() {
    const fileInput = document.getElementById('audioFile');
    const file = fileInput.files[0];
    
    if (!file) {
        showError('ãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„');
        return;
    }
    
    try {
        showSuccess(`å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†ã‚’é–‹å§‹ã—ã¾ã™: ${file.name}`);
        
        const result = await processor.processLargeAudioFile(file);
        
        if (result.success) {
            // çµæœã‚’è¡¨ç¤º
            document.getElementById('textDisplay').textContent = result.text;
            showSuccess('å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«ã®å‡¦ç†ãŒå®Œäº†ã—ã¾ã—ãŸï¼');
        } else {
            throw new Error(result.error || 'å‡¦ç†ã«å¤±æ•—ã—ã¾ã—ãŸ');
        }
        
    } catch (error) {
        console.error('å¤§å®¹é‡ãƒ•ã‚¡ã‚¤ãƒ«å‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
        showError(`å‡¦ç†ã‚¨ãƒ©ãƒ¼: ${error.message}`);
    }
}

// CSSï¼ˆãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼ç”¨ï¼‰
const progressBarStyles = `
<style>
.progress-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    min-width: 400px;
}

.progress-message {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 15px;
    text-align: center;
    color: #374151;
