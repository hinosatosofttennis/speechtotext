}

.progress-fill {
    animation: pulse 2s infinite;
}
</style>
`;

// ã‚¹ã‚¿ã‚¤ãƒ«ã‚’è¿½åŠ 
document.head.insertAdjacentHTML('beforeend', progressBarStyles);
            
            
            
            
            
            
            
                                                
            // ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºãƒã‚§ãƒƒã‚¯ï¼ˆã‚¯ãƒ©ã‚¤ã‚¢ãƒ³ãƒˆå´ï¼‰
            const maxSizeInMB = 15; // ã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆã§ã¯15MBã¾ã§å¯¾å¿œ
            const fileSizeInMB = file.size / 1024 / 1024;
            if (fileSizeInMB > maxSizeInMB) {
                showError(`ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºãŒå¤§ãã™ãã¾ã™: ${fileSizeInMB.toFixed(2)}MB (ä¸Šé™: ${maxSizeInMB}MB)`);
                return;
            }
            
            // ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°è¡¨ç¤º
            document.getElementById('loading').classList.add('active');
            document.getElementById('convertButton').disabled = true;
            hideMessages();

            try {
                // é€²è¡ŒçŠ¶æ³ã®æ›´æ–°
                updateLoadingMessage('éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‚’èª­ã¿è¾¼ã¿ä¸­...');
                
                // ãƒ•ã‚¡ã‚¤ãƒ«ã‚’Base64ã«å¤‰æ›
                const base64Audio = await fileToBase64(file);
                
                updateLoadingMessage('éŸ³å£°ã‚’ãƒ†ã‚­ã‚¹ãƒˆã«å¤‰æ›ä¸­...');
                
                // Google Speech-to-Text APIå‘¼ã³å‡ºã—ï¼ˆã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆçµŒç”±ï¼‰
                const speechResult = await callSpeechToTextAPIWithServiceAccount(base64Audio, language);
                
                updateLoadingMessage('AIã§ãƒ†ã‚­ã‚¹ãƒˆã‚’æ”¹å–„ä¸­...');
                
                // Gemini AIã§æ–‡ç« ã‚’æ”¹å–„ï¼ˆã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆçµŒç”±ï¼‰
                const improvedResult = await improvTextWithGeminiServiceAccount(speechResult);
                
                updateLoadingMessage('çµæœã‚’è¡¨ç¤ºä¸­...');
                
                // çµæœã‚’è¡¨ç¤º
                currentText = improvedResult.text;
                currentSpeakerData = improvedResult.speakers;
                
                if (improvedResult.speakers) {
                    displaySpeakerText(improvedResult);
                    displayMode = 'speaker';
                    document.getElementById('toggleViewButton').style.display = 'block';
                } else {
                    document.getElementById('textDisplay').innerHTML = '';
                    document.getElementById('textDisplay').contentEditable = true;
                    document.getElementById('textDisplay').textContent = improvedResult.text;
                    displayMode = 'normal';
                    document.getElementById('toggleViewButton').style.display = 'none';
                }
                
                updateTextDisplay();
                
                showSuccess(`éŸ³å£°ã®å¤‰æ›ãŒå®Œäº†ã—ã¾ã—ãŸï¼${speechResult.requestId ? ' (ID: ' + speechResult.requestId.slice(-8) + ')' : ''}`);
                
            } catch (error) {
                console.error('å¤‰æ›ã‚¨ãƒ©ãƒ¼:', error);
                showError(error.message || 'å¤‰æ›ä¸­ã«äºˆæœŸã—ãªã„ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
            } finally {
                document.getElementById('loading').classList.remove('active');
                document.getElementById('convertButton').disabled = false;
            }
        }

        // ãƒ•ã‚¡ã‚¤ãƒ«ã‚’Base64ã«å¤‰æ›
        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => {
                    const base64 = reader.result.split(',')[1];
                    resolve(base64);
                };
                reader.onerror = reject;
                reader.readAsDataURL(file);
            });
        }

        // Google Speech-to-Text APIå‘¼ã³å‡ºã—ï¼ˆã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆçµŒç”±ãƒ»ã‚¨ãƒ©ãƒ¼ãƒãƒ³ãƒ‰ãƒªãƒ³ã‚°å¼·åŒ–ï¼‰
        async function callSpeechToTextAPIWithServiceAccount(base64Audio, language) {
            const enableDiarization = document.getElementById('enableDiarization').value === 'true';
            
            const config = {
                encoding: window.currentAudioEncoding || 'MP3',
                sampleRateHertz: 16000,
                languageCode: language,
                model: 'latest_long',
                useEnhanced: true,
                enableAutomaticPunctuation: true,
                enableWordTimeOffsets: true
            };

            // è©±è€…è­˜åˆ¥ãŒæœ‰åŠ¹ãªå ´åˆã®è¨­å®šè¿½åŠ 
            if (enableDiarization) {
                const minSpeakers = parseInt(document.getElementById('minSpeakers').value) || 2;
                const maxSpeakers = parseInt(document.getElementById('maxSpeakers').value) || 6;
                
                config.diarizationConfig = {
                    enableSpeakerDiarization: true,
                    minSpeakerCount: minSpeakers,
                    maxSpeakerCount: maxSpeakers
                };
            }

            try {
                // ã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆè¨­å®šä»˜ãã§APIã‚’å‘¼ã³å‡ºã—
                const controller = new AbortController();
                const timeoutId = setTimeout(() => {
                    controller.abort();
                }, 60000); // 60ç§’ã§ã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆ

                const response = await fetch(SPEECH_API_PROXY, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        audioData: base64Audio,
                        config: config,
                        clientId: CLIENT_ID
                    }),
                    signal: controller.signal
                });

                clearTimeout(timeoutId);

                // ãƒ¬ã‚¹ãƒãƒ³ã‚¹å‡¦ç†
                if (!response.ok) {
                    const errorData = await response.json();
                    
                    // ã‚¨ãƒ©ãƒ¼ç¨®åˆ¥ã«å¿œã˜ãŸå‡¦ç†
                    switch (response.status) {
                        case 400:
                            throw new Error(`å…¥åŠ›ãƒ‡ãƒ¼ã‚¿ã‚¨ãƒ©ãƒ¼: ${errorData.message || 'ä¸æ­£ãªãƒªã‚¯ã‚¨ã‚¹ãƒˆã§ã™'}`);
                        case 401:
                            throw new Error('ã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆã®èªè¨¼ã«å¤±æ•—ã—ã¾ã—ãŸã€‚ã‚µãƒ¼ãƒãƒ¼è¨­å®šã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚');
                        case 403:
                            throw new Error('APIã‚¢ã‚¯ã‚»ã‚¹ãŒæ‹’å¦ã•ã‚Œã¾ã—ãŸã€‚ã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆã®æ¨©é™ã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚');
                        case 408:
                            throw new Error('ãƒªã‚¯ã‚¨ã‚¹ãƒˆãŒã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆã—ã¾ã—ãŸã€‚éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ãŒé•·ã™ãã‚‹ã‹ã€ã‚µãƒ¼ãƒãƒ¼ãŒæ··é›‘ã—ã¦ã„ã‚‹å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚');
                        case 413:
                            throw new Error(`ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºãŒå¤§ãã™ãã¾ã™: ${errorData.currentSize || 'ã‚µã‚¤ã‚ºä¸æ˜'} (ä¸Šé™: 15MB)`);
                        case 429:
                            throw new Error(`ãƒªã‚¯ã‚¨ã‚¹ãƒˆåˆ¶é™ã«é”ã—ã¾ã—ãŸã€‚${errorData.resetTime ? 'æ¬¡å›ãƒªã‚»ãƒƒãƒˆ: ' + new Date(errorData.resetTime).toLocaleString() : 'ã—ã°ã‚‰ããŠå¾…ã¡ãã ã•ã„ã€‚'}`);
                        case 500:
                            throw new Error(`ã‚µãƒ¼ãƒãƒ¼ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ${errorData.message || 'å†…éƒ¨ã‚¨ãƒ©ãƒ¼'}`);
                        default:
                            throw new Error(`APIå‘¼ã³å‡ºã—ã‚¨ãƒ©ãƒ¼ (${response.status}): ${errorData.error || errorData.message || 'ä¸æ˜ãªã‚¨ãƒ©ãƒ¼'}`);
                    }
                }

                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(`APIå¿œç­”ã‚¨ãƒ©ãƒ¼: ${data.error || 'ä¸æ˜ãªã‚¨ãƒ©ãƒ¼'}`);
                }

                if (!data.results || data.results.length === 0) {
                    throw new Error('éŸ³å£°ã‹ã‚‰ãƒ†ã‚­ã‚¹ãƒˆã‚’æŠ½å‡ºã§ãã¾ã›ã‚“ã§ã—ãŸã€‚éŸ³å£°ãŒæ˜ç­ã§ãªã„ã€ã¾ãŸã¯å¯¾å¿œè¨€èªä»¥å¤–ã®å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚');
                }

                // è©±è€…è­˜åˆ¥ãŒæœ‰åŠ¹ãªå ´åˆã®å‡¦ç†
                if (enableDiarization && data.results[0].alternatives[0].words) {
                    return processSpeakerDiarization(data.results);
                } else {
                    // é€šå¸¸ã®ãƒ†ã‚­ã‚¹ãƒˆæŠ½å‡º
                    return {
                        text: data.results.map(result => result.alternatives[0].transcript).join(' '),
                        speakers: null,
                        requestId: data.requestId
                    };
                }

            } catch (error) {
                // ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯ã‚¨ãƒ©ãƒ¼ã‚„ã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆã‚¨ãƒ©ãƒ¼ã®å‡¦ç†
                if (error.name === 'AbortError') {
                    throw new Error('ãƒªã‚¯ã‚¨ã‚¹ãƒˆãŒã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆã—ã¾ã—ãŸã€‚éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã®ã‚µã‚¤ã‚ºã‚’å°ã•ãã™ã‚‹ã‹ã€ã—ã°ã‚‰ãå¾…ã£ã¦ã‹ã‚‰å†è©¦è¡Œã—ã¦ãã ã•ã„ã€‚');
                }
                
                if (error.message.includes('Failed to fetch') || error.message.includes('NetworkError')) {
                    throw new Error('ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚ã‚¤ãƒ³ã‚¿ãƒ¼ãƒãƒƒãƒˆæ¥ç¶šã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚');
                }
                
                // ãã®ä»–ã®ã‚¨ãƒ©ãƒ¼ã¯ãã®ã¾ã¾å†ã‚¹ãƒ­ãƒ¼
                throw error;
            }
        }

        // è©±è€…è­˜åˆ¥çµæœã®å‡¦ç†
        function processSpeakerDiarization(results) {
            const words = results[0].alternatives[0].words;
            const segments = [];
            let currentSpeaker = null;
            let currentSegment = '';

            words.forEach(word => {
                const speakerTag = word.speakerTag;
                
                if (currentSpeaker !== speakerTag) {
                    if (currentSegment) {
                        segments.push({
                            speaker: currentSpeaker,
                            text: currentSegment.trim()
                        });
                    }
                    currentSpeaker = speakerTag;
                    currentSegment = word.word + ' ';
                } else {
                    currentSegment += word.word + ' ';
                }
            });

            // æœ€å¾Œã®ã‚»ã‚°ãƒ¡ãƒ³ãƒˆã‚’è¿½åŠ 
            if (currentSegment) {
                segments.push({
                    speaker: currentSpeaker,
                    text: currentSegment.trim()
                });
            }

            return {
                text: segments.map(seg => `è©±è€…${seg.speaker}: ${seg.text}`).join('\n\n'),
                speakers: segments
            };
        }

        // Gemini AIã§ãƒ†ã‚­ã‚¹ãƒˆã‚’æ”¹å–„ï¼ˆã‚µãƒ¼ãƒ“ã‚¹ã‚¢ã‚«ã‚¦ãƒ³ãƒˆçµŒç”±ï¼‰
        async function improvTextWithGeminiServiceAccount(speechResult) {
            try {
                let prompt;
                if (speechResult.speakers) {
                    prompt = `ä»¥ä¸‹ã¯éŸ³å£°èªè­˜çµæœã§è©±è€…è­˜åˆ¥ãŒè¡Œã‚ã‚Œã¦ã„ã¾ã™ã€‚å„è©±è€…ã®ç™ºè¨€ã‚’è‡ªç„¶ã§èª­ã¿ã‚„ã™ã„æ—¥æœ¬èªã«æ”¹å–„ã—ã¦ãã ã•ã„ã€‚è©±è€…ã®åŒºåˆ¥ã¯ä¿æŒã—ã€å¥èª­ç‚¹ã‚’é©åˆ‡ã«è¿½åŠ ã—ã€èª¤èªè­˜ã•ã‚ŒãŸéƒ¨åˆ†ãŒã‚ã‚Œã°ä¿®æ­£ã—ã¦ãã ã•ã„ï¼š\n\n${speechResult.text}`;
                } else {
                    prompt = `ä»¥ä¸‹ã®éŸ³å£°èªè­˜çµæœã®ãƒ†ã‚­ã‚¹ãƒˆã‚’ã€èª­ã¿ã‚„ã™ãè‡ªç„¶ãªæ—¥æœ¬èªã«æ”¹å–„ã—ã¦ãã ã•ã„ã€‚å¥èª­ç‚¹ã‚’é©åˆ‡ã«è¿½åŠ ã—ã€æ®µè½ã‚’æ•´ç†ã—ã€èª¤èªè­˜ã•ã‚ŒãŸéƒ¨åˆ†ãŒã‚ã‚Œã°ä¿®æ­£ã—ã¦ãã ã•ã„ï¼š\n\n${speechResult.text}`;
                }

                const response = await fetch(GEMINI_API_PROXY, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        text: prompt,
                        options: {
                            temperature: 0.7,
                            maxOutputTokens: 2048
                        }
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    console.warn('Gemini API ã‚¨ãƒ©ãƒ¼:', errorData);
                    // Gemini APIã«å¤±æ•—ã—ãŸå ´åˆã¯å…ƒã®ãƒ†ã‚­ã‚¹ãƒˆã‚’è¿”ã™
                    return speechResult;
                }

                const data = await response.json();
                
                if (!data.success || !data.result) {
                    console.warn('Gemini API å¿œç­”ã‚¨ãƒ©ãƒ¼:', data);
                    return speechResult; // æ”¹å–„ã«å¤±æ•—ã—ãŸå ´åˆã¯å…ƒã®çµæœã‚’è¿”ã™
                }

                return {
                    text: data.result,
                    speakers: speechResult.speakers
                };

            } catch (error) {
                console.error('Gemini API ã‚¨ãƒ©ãƒ¼:', error);
                // ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ãŸå ´åˆã¯å…ƒã®ãƒ†ã‚­ã‚¹ãƒˆã‚’è¿”ã™
                return speechResult;
            }
        }

        // è©±è€…åˆ¥ãƒ†ã‚­ã‚¹ãƒˆè¡¨ç¤º
        function displaySpeakerText(result) {
            const display = document.getElementById('textDisplay');
            display.innerHTML = '';
            display.contentEditable = false;
            
            result.speakers.forEach((segment, index) => {
                const speakerIndex = segment.speaker - 1;
                const color = speakerColors[speakerIndex % speakerColors.length];
                const speakerName = speakerNames[speakerIndex] || `è©±è€…${segment.speaker}`;
                
                const segmentDiv = document.createElement('div');
                segmentDiv.className = 'speaker-segment';
                segmentDiv.style.borderLeftColor = color;
                
                segmentDiv.innerHTML = `
                    <div class="speaker-label">
                        <span class="speaker-indicator" style="background-color: ${color};"></span>
                        ${speakerName}
                    </div>
                    <div class="speaker-text" contenteditable="true" data-speaker="${segment.speaker}">${segment.text}</div>
                `;
                
                display.appendChild(segmentDiv);
            });
            
            // ç·¨é›†ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼ã‚’è¿½åŠ 
            display.querySelectorAll('.speaker-text').forEach(element => {
                element.addEventListener('input', updateSpeakerText);
            });
        }

        // è©±è€…åˆ¥ãƒ†ã‚­ã‚¹ãƒˆã®æ›´æ–°
        function updateSpeakerText() {
            if (currentSpeakerData) {
                const segments = document.querySelectorAll('.speaker-text');
                currentSpeakerData.forEach((segment, index) => {
                    if (segments[index]) {
                        segment.text = segments[index].textContent || segments[index].innerText;
                    }
                });
                
                // é€šå¸¸ãƒ†ã‚­ã‚¹ãƒˆã‚‚æ›´æ–°
                currentText = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `è©±è€…${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            }
        }

        // è¡¨ç¤ºãƒ¢ãƒ¼ãƒ‰ã®åˆ‡ã‚Šæ›¿ãˆ
        function toggleDisplayMode() {
            const display = document.getElementById('textDisplay');
            const toggleButton = document.getElementById('toggleViewButton');
            
            if (displayMode === 'speaker' && currentSpeakerData) {
                // é€šå¸¸è¡¨ç¤ºã«åˆ‡ã‚Šæ›¿ãˆ
                display.innerHTML = '';
                display.contentEditable = true;
                display.textContent = currentText;
                displayMode = 'normal';
                toggleButton.textContent = 'ğŸ‘¥ è©±è€…åˆ¥è¡¨ç¤ºã«åˆ‡ã‚Šæ›¿ãˆ';
            } else if (displayMode === 'normal' && currentSpeakerData) {
                // è©±è€…åˆ¥è¡¨ç¤ºã«åˆ‡ã‚Šæ›¿ãˆ
                displaySpeakerText({ speakers: currentSpeakerData });
                displayMode = 'speaker';
                toggleButton.textContent = 'ğŸ“ é€šå¸¸è¡¨ç¤ºã«åˆ‡ã‚Šæ›¿ãˆ';
            }
        }

        // ãƒ†ã‚­ã‚¹ãƒˆè¡¨ç¤ºã®æ›´æ–°
        function updateTextDisplay() {
            const display = document.getElementById('textDisplay');
            const fontFamily = document.getElementById('fontFamily').value;
            const fontSize = document.getElementById('fontSize').value;
            const lineHeight = document.getElementById('lineHeight').value;

            display.style.fontFamily = fontFamily;
            display.style.fontSize = fontSize;
            display.style.lineHeight = lineHeight;

            // ç¾åœ¨ã®ãƒ†ã‚­ã‚¹ãƒˆã‚’å–å¾—
            if (displayMode === 'speaker') {
                updateSpeakerText();
            } else {
                currentText = display.textContent || display.innerText;
            }
        }

        // è©±è€…ãƒ‡ãƒ¼ã‚¿ä»˜ãã§ãƒ†ã‚­ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
        function downloadAsText() {
            let text;
            if (displayMode === 'speaker' && currentSpeakerData) {
                text = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `è©±è€…${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
            }
            
            const filename = document.getElementById('currentFileName').value || 'converted_text';
            
            const blob = new Blob([text], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename + '.txt';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // è©±è€…ãƒ‡ãƒ¼ã‚¿ä»˜ãã§Wordãƒ•ã‚¡ã‚¤ãƒ«ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
        function downloadAsWord() {
            let text;
            let htmlContent;
            const filename = document.getElementById('currentFileName').value || 'converted_text';
            const fontFamily = document.getElementById('fontFamily').value;
            const fontSize = document.getElementById('fontSize').value;
            const lineHeight = document.getElementById('lineHeight').value;

            if (displayMode === 'speaker' && currentSpeakerData) {
                // è©±è€…åˆ¥ã®ã‚¹ã‚¿ã‚¤ãƒ«ä»˜ãHTML
                const speakerHTML = currentSpeakerData.map(seg => {
                    const speakerIndex = seg.speaker - 1;
                    const color = speakerColors[speakerIndex % speakerColors.length];
                    const speakerName = speakerNames[speakerIndex] || `è©±è€…${seg.speaker}`;
                    
                    return `
                        <div style="margin-bottom: 20px; padding: 15px; border-left: 4px solid ${color}; background: #f8fafc;">
                            <div style="font-weight: bold; color: ${color}; margin-bottom: 8px;">
                                <span style="display: inline-block; width: 12px; height: 12px; background: ${color}; border-radius: 50%; margin-right: 8px;"></span>
                                ${speakerName}
                            </div>
                            <div style="color: #374151;">${seg.text}</div>
                        </div>
                    `;
                }).join('');
                
                htmlContent = `
                    <html>
                    <head>
                        <meta charset="utf-8">
                        <style>
                            body {
                                font-family: "${fontFamily}";
                                font-size: ${fontSize};
                                line-height: ${lineHeight};
                                margin: 40px;
                            }
                        </style>
                    </head>
                    <body>
                        ${speakerHTML}
                    </body>
                    </html>
                `;
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
                htmlContent = `
                    <html>
                    <head>
                        <meta charset="utf-8">
                        <style>
                            body {
                                font-family: "${fontFamily}";
                                font-size: ${fontSize};
                                line-height: ${lineHeight};
                                margin: 40px;
                            }
                        </style>
                    </head>
                    <body>
                        <pre style="white-space: pre-wrap; font-family: inherit;">${text}</pre>
                    </body>
                    </html>
                `;
            }

            const blob = new Blob([htmlContent], { type: 'application/msword' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename + '.doc';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // å±¥æ­´ã«ä¿å­˜
        function saveToHistory() {
            let text;
            if (displayMode === 'speaker' && currentSpeakerData) {
                text = currentSpeakerData.map(seg => {
                    const speakerName = speakerNames[seg.speaker - 1] || `è©±è€…${seg.speaker}`;
                    return `${speakerName}: ${seg.text}`;
                }).join('\n\n');
            } else {
                text = document.getElementById('textDisplay').textContent || currentText;
            }
            
            const filename = document.getElementById('currentFileName').value || 'untitled';
            
            if (!text || text.trim() === '' || text === 'ã“ã“ã«å¤‰æ›ã•ã‚ŒãŸãƒ†ã‚­ã‚¹ãƒˆãŒè¡¨ç¤ºã•ã‚Œã¾ã™...') {
                showError('ä¿å­˜ã™ã‚‹ãƒ†ã‚­ã‚¹ãƒˆãŒã‚ã‚Šã¾ã›ã‚“');
                return;
            }

            const historyItem = {
                id: Date.now(),
                filename: filename,
                text: text,
                date: new Date().toLocaleString('ja-JP'),
                fontSettings: {
                    fontFamily: document.getElementById('fontFamily').value,
                    fontSize: document.getElementById('fontSize').value,
                    lineHeight: document.getElementById('lineHeight').value
                },
                speakerData: currentSpeakerData,
                speakerNames: {...speakerNames},
                hasSpeakers: currentSpeakerData !== null
            };

            historyData.unshift(historyItem);
            saveHistoryToStorage();
            displayHistory();
            
            showSuccess('å±¥æ­´ã«ä¿å­˜ã—ã¾ã—ãŸ');
        }

        // å±¥æ­´ã‚’è¡¨ç¤º
        function displayHistory(filteredData = null) {
            const historyList = document.getElementById('historyList');
            const data = filteredData || historyData;
            
            if (data.length === 0) {
                historyList.innerHTML = '<p style="text-align: center; color: #6b7280; padding: 40px;">å±¥æ­´ãŒã‚ã‚Šã¾ã›ã‚“</p>';
                return;
            }

            historyList.innerHTML = data.map(item => `
                <div class="history-item" id="history-${item.id}">
                    <div class="history-header">
                        <div class="history-filename" id="filename-display-${item.id}">
                            ${item.hasSpeakers ? 'ğŸ‘¥ ' : ''}${item.filename}
                        </div>
                        <div class="history-date">${item.date}</div>
                    </div>
                    <div class="filename-edit" id="filename-edit-${item.id}">
                        <input type="text" value="${item.filename}" id="filename-input-${item.id}">
                        <button onclick="saveFilenameEdit(${item.id})">ä¿å­˜</button>
                        <button onclick="cancelFilenameEdit(${item.id})" style="background: #6b7280;">ã‚­ãƒ£ãƒ³ã‚»ãƒ«</button>
                    </div>
                    <div class="history-text-preview">${item.text.substring(0, 100)}...</div>
                    <div class="history-actions">
                        <button class="action-button edit-button" onclick="editFilename(${item.id})">ğŸ“ åå‰å¤‰æ›´</button>
                        <button class="action-button load-button" onclick="loadFromHistory(${item.id})">ğŸ“‚ èª­ã¿è¾¼ã¿</button>
                        <button class="action-button delete-button" onclick="deleteFromHistory(${item.id})">ğŸ—‘ï¸ å‰Šé™¤</button>
                    </div>
                </div>
            `).join('');
        }

        // å±¥æ­´æ¤œç´¢
        function searchHistory() {
            const searchTerm = document.getElementById('searchHistory').value.toLowerCase();
            
            if (searchTerm === '') {
                displayHistory();
                return;
            }

            const filteredData = historyData.filter(item => 
                item.filename.toLowerCase().includes(searchTerm) ||
                item.text.toLowerCase().includes(searchTerm)
            );
            
            displayHistory(filteredData);
        }

        // å±¥æ­´ã‹ã‚‰èª­ã¿è¾¼ã¿
        function loadFromHistory(id) {
            const item = historyData.find(h => h.id === id);
            if (!item) return;

            currentText = item.text;
            currentSpeakerData = item.speakerData || null;
            
            // è©±è€…åã‚’å¾©å…ƒ
            if (item.speakerNames) {
                speakerNames = {...item.speakerNames};
                generateSpeakerNameInputs();
            }
            
            // è¡¨ç¤ºã‚’æ›´æ–°
            if (item.hasSpeakers && item.speakerData) {
                displaySpeakerText({ speakers: item.speakerData });
                displayMode = 'speaker';
                document.getElementById('toggleViewButton').style.display = 'block';
                document.getElementById('toggleViewButton').textContent = 'ğŸ“ é€šå¸¸è¡¨ç¤ºã«åˆ‡ã‚Šæ›¿ãˆ';
            } else {
                document.getElementById('textDisplay').innerHTML = '';
                document.getElementById('textDisplay').contentEditable = true;
                document.getElementById('textDisplay').textContent = item.text;
                displayMode = 'normal';
                document.getElementById('toggleViewButton').style.display = 'none';
            }
            
            document.getElementById('currentFileName').value = item.filename;
            
            // ãƒ•ã‚©ãƒ³ãƒˆè¨­å®šã‚‚å¾©å…ƒ
            document.getElementById('fontFamily').value = item.fontSettings?.fontFamily || 'Noto Sans JP';
            document.getElementById('fontSize').value = item.fontSettings?.fontSize || '16px';
            document.getElementById('lineHeight').value = item.fontSettings?.lineHeight || '1.8';
            
            updateTextDisplay();
            showSuccess('å±¥æ­´ã‹ã‚‰èª­ã¿è¾¼ã¿ã¾ã—ãŸ');
        }

        // ãƒ•ã‚¡ã‚¤ãƒ«åç·¨é›†
        function editFilename(id) {
            document.getElementById(`filename-display-${id}`).style.display = 'none';
            document.getElementById(`filename-edit-${id}`).style.display = 'flex';
        }

        function saveFilenameEdit(id) {
            const newFilename = document.getElementById(`filename-input-${id}`).value.trim();
            if (!newFilename) {
                showError('ãƒ•ã‚¡ã‚¤ãƒ«åã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
                return;
            }

            const item = historyData.find(h => h.id === id);
            if (item) {
                item.filename = newFilename;
                saveHistoryToStorage();
                displayHistory();
                showSuccess('ãƒ•ã‚¡ã‚¤ãƒ«åã‚’æ›´æ–°ã—ã¾ã—ãŸ');
            }
        }

        function cancelFilenameEdit(id) {
            document.getElementById(`filename-display-${id}`).style.display = 'block';
            document.getElementById(`filename-edit-${id}`).style.display = 'none';
        }

        // å±¥æ­´ã‹ã‚‰å‰Šé™¤
        function deleteFromHistory(id) {
            if (confirm('ã“ã®å±¥æ­´ã‚’å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿ')) {
                historyData = historyData.filter(h => h.id !== id);
                saveHistoryToStorage();
                displayHistory();
                showSuccess('å±¥æ­´ã‚’å‰Šé™¤ã—ã¾ã—ãŸ');
            }
        }

        // å±¥æ­´ã®ä¿å­˜ã¨èª­ã¿è¾¼ã¿ï¼ˆãƒ¡ãƒ¢ãƒªå†…ï¼‰
        function saveHistoryToStorage() {
            // ãƒ–ãƒ©ã‚¦ã‚¶ç’°å¢ƒã§ã¯ localStorage ã‚’ä½¿ç”¨ã—ãªã„ãŸã‚ã€ãƒ¡ãƒ¢ãƒªå†…ã«ä¿æŒ
            // å®Ÿéš›ã®ç’°å¢ƒã§ã¯ localStorage.setItem('speechToTextHistory', JSON.stringify(historyData)); ã‚’ä½¿ç”¨
        }

        function loadHistoryFromStorage() {
            // ãƒ–ãƒ©ã‚¦ã‚¶ç’°å¢ƒã§ã¯ localStorage ã‚’ä½¿ç”¨ã—ãªã„ãŸã‚ã€ç©ºã®é…åˆ—ã§åˆæœŸåŒ–
            // å®Ÿéš›ã®ç’°å¢ƒã§ã¯ const saved = localStorage.getItem('speechToTextHistory'); ã‚’ä½¿ç”¨
            // if (saved) { historyData = JSON.parse(saved); }
            historyData = [];
        }

        // ã‚¨ãƒ©ãƒ¼ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸è¡¨ç¤º
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }

        // æˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸è¡¨ç¤º
        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 3000);
        }

        // ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’éè¡¨ç¤º
        function hideMessages() {
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }

        // ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã®æ›´æ–°
        function updateLoadingMessage(message) {
            const loadingElement = document.getElementById('loading');
            const messageElement = loadingElement.querySelector('p');
            if (messageElement) {
                messageElement.textContent = message;
            }
        }

        // ãƒ†ã‚­ã‚¹ãƒˆè¡¨ç¤ºã‚¨ãƒªã‚¢ã®ç·¨é›†æ™‚ã«ç¾åœ¨ã®ãƒ†ã‚­ã‚¹ãƒˆã‚’æ›´æ–°
        document.getElementById('textDisplay').addEventListener('input', function() {
            currentText = this.textContent || this.innerText;
        });

        // ã‚¨ãƒ³ã‚¿ãƒ¼ã‚­ãƒ¼ã§ã®æ¤œç´¢
        document.getElementById('searchHistory').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchHistory();
            }
        });

        // ãƒ‰ãƒ©ãƒƒã‚°&ãƒ‰ãƒ­ãƒƒãƒ—å¯¾å¿œ
        const uploadSection = document.querySelector('.upload-section');
        
        uploadSection.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.borderColor = '#4f46e5';
            this.style.background = '#f1f5f9';
        });

        uploadSection.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.style.borderColor = '#e2e8f0';
            this.style.background = '#f8fafc';
        });

        uploadSection.addEventListener('drop', function(e) {
            e.preventDefault();
            this.style.borderColor = '#e2e8f0';
            this.style.background = '#f8fafc';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                // éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‹ã©ã†ã‹ãƒã‚§ãƒƒã‚¯
                if (file.type.startsWith('audio/') || file.name.match(/\.(m4a|mp3|wav|flac)$/i)) {
                    document.getElementById('audioFile').files = files;
                    document.getElementById('audioFile').dispatchEvent(new Event('change'));
                } else {
                    showError('éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„ï¼ˆ.m4a, .mp3, .wav, .flacï¼‰');
                }
            }
        });

        // ã‚­ãƒ¼ãƒœãƒ¼ãƒ‰ã‚·ãƒ§ãƒ¼ãƒˆã‚«ãƒƒãƒˆ
        document.addEventListener('keydown', function(e) {
            // Ctrl+S ã§å±¥æ­´ä¿å­˜
            if (e.ctrlKey && e.key === 's') {
                e.preventDefault();
                saveToHistory();
            }
            
            // Ctrl+D ã§ãƒ†ã‚­ã‚¹ãƒˆãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
            if (e.ctrlKey && e.key === 'd') {
                e.preventDefault();
                downloadAsText();
            }
        });

        // æ–‡å­—æ•°ã‚«ã‚¦ãƒ³ãƒˆè¡¨ç¤º
        function updateCharacterCount() {
            const text = document.getElementById('textDisplay').textContent || '';
            const charCount = text.length;
            const wordCount = text.trim() ? text.trim().split(/\s+/).length : 0;
            
            // æ–‡å­—æ•°è¡¨ç¤ºè¦ç´ ãŒã‚ã‚Œã°æ›´æ–°ï¼ˆå¿…è¦ã«å¿œã˜ã¦è¿½åŠ ï¼‰
            const countDisplay = document.getElementById('characterCount');
            if (countDisplay) {
                countDisplay.textContent = `æ–‡å­—æ•°: ${charCount} / å˜èªæ•°: ${wordCount}`;
            }
        }

        // ãƒ†ã‚­ã‚¹ãƒˆå¤‰æ›´æ™‚ã«æ–‡å­—æ•°ã‚’æ›´æ–°
        document.getElementById('textDisplay').addEventListener('input', updateCharacterCount);

        // ãƒ‡ãƒãƒƒã‚°ç”¨ï¼šãƒšãƒ¼ã‚¸ã®çŠ¶æ…‹ã‚’ãƒã‚§ãƒƒã‚¯ã™ã‚‹é–¢æ•°
        function debugPageStatus() {
            console.log('=== ãƒ‡ãƒãƒƒã‚°æƒ…å ± ===');
            console.log('User Agent:', navigator.userAgent);
            console.log('ç¾åœ¨ã®URL:', window.location.href);
            
            // é‡è¦ãªè¦ç´ ã®å­˜åœ¨ç¢ºèª
            const audioFile = document.getElementById('audioFile');
            const fileName = document.getElementById('fileName');
            const convertButton = document.getElementById('convertButton');
            
            console.log('audioFileè¦ç´ :', audioFile ? 'å­˜åœ¨' : 'ä¸å­˜åœ¨');
            console.log('fileNameè¦ç´ :', fileName ? 'å­˜åœ¨' : 'ä¸å­˜åœ¨');
            console.log('convertButtonè¦ç´ :', convertButton ? 'å­˜åœ¨' : 'ä¸å­˜åœ¨');
            
            // ãƒ•ã‚¡ã‚¤ãƒ«APIã®ã‚µãƒãƒ¼ãƒˆç¢ºèª
            if (window.File && window.FileReader && window.FileList && window.Blob) {
                console.log('âœ… File API ã‚µãƒãƒ¼ãƒˆ: æœ‰åŠ¹');
            } else {
                console.log('âŒ File API ã‚µãƒãƒ¼ãƒˆ: ç„¡åŠ¹');
            }
            
            // Fetch APIã®ã‚µãƒãƒ¼ãƒˆç¢ºèª
            if (typeof fetch !== 'undefined') {
                console.log('âœ… Fetch API ã‚µãƒãƒ¼ãƒˆ: æœ‰åŠ¹');
            } else {
                console.log('âŒ Fetch API ã‚µãƒãƒ¼ãƒˆ: ç„¡åŠ¹');
            }
            
            // API ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆã®ç¢ºèª
            console.log('Speech API Proxy:', SPEECH_API_PROXY);
            console.log('Gemini API Proxy:', GEMINI_API_PROXY);
            
            console.log('==================');
        }

        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿å¾Œã«ãƒ‡ãƒãƒƒã‚°æƒ…å ±ã‚’è¡¨ç¤º
        setTimeout(() => {
            debugPageStatus();
        }, 1000);

        // åˆæœŸè¡¨ç¤ºæ™‚ã®ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼è¨­å®š
        setTimeout(() => {
            const currentFileNameInput = document.getElementById('currentFileName');
            if (currentFileNameInput && !currentFileNameInput.value.includes('éŸ³å£°å¤‰æ›_')) {
                currentFileNameInput.value = 'éŸ³å£°å¤‰æ›_' + new Date().toISOString().slice(0, 10);
            }
        }, 500);

        // API ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆã®ãƒ˜ãƒ«ã‚¹ãƒã‚§ãƒƒã‚¯æ©Ÿèƒ½
        async function checkAPIHealth() {
            try {
                const healthUrl = SPEECH_API_PROXY.replace('/speech-to-text', '/health');
                const response = await fetch(healthUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    console.log('âœ… API Health Check:', data);
                    return true;
                } else {
                    console.warn('âš ï¸ API Health Check Failed:', response.status);
                    return false;
                }
            } catch (error) {
                console.error('âŒ API Health Check Error:', error);
                return false;
            }
        }

        // å®šæœŸçš„ãªãƒ˜ãƒ«ã‚¹ãƒã‚§ãƒƒã‚¯ï¼ˆã‚ªãƒ—ã‚·ãƒ§ãƒ³ï¼‰
        // setInterval(checkAPIHealth, 300000); // 5åˆ†ã”ã¨

        // ã‚¨ãƒ©ãƒ¼ç™ºç”Ÿæ™‚ã®å¾©æ—§å‡¦ç†
        function handleCriticalError(error) {
            console.error('Critical Error:', error);
            
            // UIè¦ç´ ã‚’ãƒªã‚»ãƒƒãƒˆ
            document.getElementById('loading').classList.remove('active');
            document.getElementById('convertButton').disabled = false;
            
            // ã‚¨ãƒ©ãƒ¼ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’è¡¨ç¤º
            showError('ã‚·ã‚¹ãƒ†ãƒ ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚ãƒšãƒ¼ã‚¸ã‚’å†èª­ã¿è¾¼ã¿ã—ã¦ãã ã•ã„ã€‚');
            
            // å¿…è¦ã«å¿œã˜ã¦è‡ªå‹•ãƒªãƒ­ãƒ¼ãƒ‰
            // setTimeout(() => {
            //     window.location.reload();
            // }, 10000);
        }

        // ã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚¨ãƒ©ãƒ¼ãƒãƒ³ãƒ‰ãƒ©ãƒ¼
        window.addEventListener('error', function(event) {
            handleCriticalError(event.error);
        });

        window.addEventListener('unhandledrejection', function(event) {
            handleCriticalError(event.reason);
        });

        // ã‚µãƒ¼ãƒ“ã‚¹ãƒ¯ãƒ¼ã‚«ãƒ¼ç™»éŒ²ï¼ˆPWAå¯¾å¿œãƒ»ã‚ªãƒ—ã‚·ãƒ§ãƒ³ï¼‰
